<odoo>
    <!--    ebs crm services authority form-->
    <record model="ir.ui.view" id="view_ebs_crm_services_authority_form">
        <field name="name">ebs.crm.services.authority.Form</field>
        <field name="model">ebs.crm.service.authority</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    ebs crm service authority tree-->
    <record id="view_ebs_crm_services_authority_tree" model="ir.ui.view">
        <field name="name">ebs.crm.services.authority.tree</field>
        <field name="model">ebs.crm.service.authority</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!--ebs crm service authority action-->
    <record model="ir.actions.act_window" id="action_ebs_crm_service_authority">
        <field name="name">Service Authority</field>
        <field name="res_model">ebs.crm.service.authority</field>
        <field name="view_mode">tree,form</field>
    </record>



</odoo>