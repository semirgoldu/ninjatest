<odoo>
    <record id="view_warning_wizard" model="ir.ui.view">
        <field name="name">Warning</field>
        <field name="model">warning.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="message" readonly="1"/>
                </sheet>
                <footer>
                    <button name="confirm_button" string="Confirm" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_view_warning_wizard" model="ir.actions.act_window">
        <field name="name">Warning</field>
        <field name="res_model">warning.wizard</field>
        <field name="view_mode">form</field>
    </record>

</odoo>