<odoo>
    <data>
        <!--list view -->
        <record id="allowance_request_type_tree" model="ir.ui.view">
            <field name="name">allowance_request_type_tree</field>
            <field name="model">ebs.payroll.allowance.request.type</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!--window -->
        <record id="allowance_request_type_window" model="ir.actions.act_window">
            <field name="name">Allowance Request Type</field>
            <field name="res_model">ebs.payroll.allowance.request.type</field>
            <field name="view_mode">tree</field>
        </record>
        <!--menu -->


    </data>
</odoo>