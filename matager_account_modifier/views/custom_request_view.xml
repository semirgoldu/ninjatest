<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    custom request tree view-->
    <record id="custom_request_tree_view" model="ir.ui.view">
        <field name="name">custom.request.tree</field>
        <field name="model">custom.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="text"/>
            </tree>
        </field>
    </record>

    <!--    custom request form view-->
    <record id="custom_request_form" model="ir.ui.view">
        <field name="name">custom.request.form</field>
        <field name="model">custom.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="user_id" required="1"/>
                        </group>
                        <group>
                            <field name="partner_id" required="1"/>
                        </group>

                    </group>
                    <group>
                        <field name="text" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    custom request action-->
    <record id="action_custom_request" model="ir.actions.act_window">
        <field name="name">Custom Request</field>
        <field name="res_model">custom.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--    custom request menuitem-->
    <menuitem id="custom_request_menu" name="Custom Request" action="action_custom_request"
              parent="website.menu_website_global_configuration"/>
</odoo>