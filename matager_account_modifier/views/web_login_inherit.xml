<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--   Change string for login from phone and email -->
    <template id="matager_web_login" inherit_id="web.login">
        <xpath expr="//div[hasclass('field-login')]" position="replace">
            <div class="form-group field-login">
                <label for="login">Email or Phone
                    <span style="color:red">*</span>
                </label>
                <input type="text" placeholder="Email or phone" name="login" t-att-value="login" id="login"
                       t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required"
                       autofocus="autofocus" autocapitalize="off"/>
            </div>

        </xpath>
        <xpath expr="//label[@for='password']" position="replace">
            <label for="password">Password
                <span style="color:red">*</span>
            </label>
        </xpath>
    </template>

</odoo>
