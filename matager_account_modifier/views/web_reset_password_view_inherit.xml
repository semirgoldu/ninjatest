<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--   Change string for  reset password from phone and email -->
    <template id="matager_web_reset_password" inherit_id="auth_signup.reset_password">
        <xpath expr="//div[hasclass('field-login')]" position="replace">
            <div class="form-group field-login">
                <label for="login" class="col-form-label">Your Email or Phone Number <span style="color:red">*</span></label>
                <input type="text" name="login" t-att-value="login" id="login" class="form-control"
                       autofocus="autofocus" required="required" autocapitalize="off"/>
            </div>
            <!-- Error if User is Not Found-->
            <div class="form-group field_user_not_found_error" t-if="not_user_error">
                <p class="alert alert-danger" role="alert">
                    User Not Found!
                </p>
            </div>
        </xpath>
    </template>

</odoo>
