<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherited sale order portal side view-->
    <template id="sale_order_portal_template_extended" inherit_id="sale.sale_order_portal_template">
        <xpath expr="//div[hasclass('o_download_pdf')]" position="after">
            <t t-if="sale_order.return_requested == false and sale_order.state in ['sale','done']">
                <div class="o_return_pdf btn-toolbar flex-sm-nowrap">
                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                        <button type="button" class="btn btn-secondary btn-block o_return_btn" style="color: white;"
                                t-att-href="sale_order.return_sale_order(sale_order.access_token)"
                                t-att-value="sale_order.return_sale_order(sale_order.access_token)"
                                title="Return">
                            <i class="fa fa-undo"/>
                            Return
                        </button>
                    </div>
                </div>
            </t>

        </xpath>

    </template>

    <template id="quotation_inherit_in_return_sale_order" inherit_id="sale.sale_order_portal_content">
        <xpath expr="//div[@id='shipping_address']//..//.." position="after">
            <t t-if="sale_order.gift_count > 0">
                <span class="small badge badge-danger orders_label_text_align" style="float:right">
                    <i class="fa fa-fw fa-truck"/>
                    <b>Return order</b>
                </span>
            </t>
        </xpath>
    </template>
</odoo>
