<odoo>

    <menuitem id="menu_sub_property_creation" name="Property Booking" parent="property_management.menu_property_main"
              sequence="4"/>

    <record id="account_view_id_inh" model="ir.ui.view">
        <field name="name">account.view.id.inh</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="ow_account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='active']" position="after">
                <field attrs="{'invisible':[('parent_id','=',False)]}" name="label_id"/>
                <field invisible="1" name="available_property"/>
                <field invisible="1" name="book_property"/>
            </xpath>
        </field>
    </record>

    <record id="view_property_created_form" model="ir.ui.view">
        <field name="name">property.created.form</field>
        <field name="model">property.created</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <button attrs="{'invisible':['|','|',('lable_bool','=',True),('is_sub_property','=',False),('state','!=','draft')]}"
                            class="oe_highlight" name="create_property" string="Create Sub Property" type="object"/>
                    <button attrs="{'invisible':['|','|',('is_sub_property','=',False),('lable_bool','=',True),('state','=','draft')]}"
                            class="oe_highlight" name="edit_prop_wizzard" string="Edit Sub Property" type="object"/>
                    <button attrs="{'invisible':['|','|',('is_sub_property','=',False),('lable_bool','=',True),('state','=','draft')]}"
                            class="oe_highlight" name="merge_prop_wizzard" string="Merge Sub Property" type="object"/>
                    <button attrs="{'invisible':['|',('is_sub_property','=',False),('lable_bool','=',True)]}"
                            class=" oe_link" name="property_unlink" string="Discard Sub Properties" type="object"/>
                    <button attrs="{'invisible':['|',('is_sub_property','=',False),('state','!=','cancel')]}"
                            class=" oe_highlight" name="split_property" string="Split Properties" type="object"/>
                    <field name="state" statusbar_visible="draft" widget="statusbar"/>
                </header>
                <sheet>
                    <field class="oe_inline oe_avatar" name="image" widget="image"/>
                    <div class="oe_left" style="padding-left:15px">
                        <div class="oe_title">
                            <label for="name"/>
                            (
                            <field class="oe_inline" name="is_sub_property"/>
                            <label for="is_sub_property" string="Is a Sub Property?"/>)
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field default_focus="1" name="name" placeholder="Name"/>
                            </h1>
                            <h4>
                                <field attrs="{'invisible':[('is_sub_property','=',False)],'required':[('is_sub_property','=',True)],'readonly':[('state','=','new_draft')]}"
                                       name="parent_id" placeholder="Parent Property Name"/>
                            </h4>
                        </div>
                    </div>
                    <group>
                        <group>
                            <label for="street" string="Address"/>
                            <div>
                                <field name="street" placeholder="Street..." required="1"/>
                                <field name="street2" placeholder="Street2..."/>
                                <field name="township" placeholder="Township..."/>
                                <div class="address_format">
                                    <field name="city" placeholder="City" required="1" style="width: 35%%"/>
                                    <field class="oe_no_button" name="state_id" options="{&quot;no_open&quot;: True}"
                                           placeholder="State" style="width: 40%%"/>
                                    <field name="zip" placeholder="ZIP" style="width: 25%%"/>
                                </div>
                                <field class="oe_no_button" name="country_id"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                       placeholder="Country" required="1"/>
                            </div>
                            <field attrs="{'invisible':['|',('is_sub_property','=',False), ('lable_bool','=',True)],'required':[('is_sub_property','=',True)],'readonly':[('state','=','new_draft')]}"
                                   name="floor" string="Number Of Floors"/>
                            <field attrs="{'invisible':[('is_sub_property','=',True)]}" name="total_prop_tower"/>
                            <field attrs="{'invisible':['|',('is_sub_property','=',False),('state','in',('draft','book','normal','close','sold','cancel'))]}"
                                   name="change_lable"/>
                            <newline/>
                            <field attrs="{'invisible':['|','|',('is_sub_property','=',False),('change_lable','=',False),('state','=','draft')]}"
                                   name="label_id" style="width:40%%;" widget="selection"/>
                            <field class="oe_subtotal_footer_separator" name="no_avl"/>
                        </group>
                        <group>
                            <field name="category_id"/>
                            <field name="type_id" required="1" widget="selection"/>
                            <field name="property_manager" required="1" domain="[('user_ids', '=', uid)]"
                                   options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            <field name="prefix3"
                                   attrs="{'invisible':['|',('is_sub_property','=',False), ('lable_bool','=',True)],'readonly':[('state','=','new_draft')]}"/>
                            <field name="ground_rent"/>
                            <field name="value"/>
                            <field attrs="{'invisible':['|',('is_sub_property','=',False), ('lable_bool','=',True)],'required':[('is_sub_property','=',True)],'readonly':[('state','=','new_draft')]}"
                                   name="no_of_property"/>
                            <field attrs="{'invisible':[('is_sub_property','=',False)]}" name="furnished"/>
                            <field invisible="1" name="prop_number"/>
                            <field invisible="1" name="floor_number"/>
                            <field invisible="1" name="tower_num"/>
                            <field invisible="1" name="lable_bool"/>
                        </group>
                    </group>
                    <group>
                        <separator string="Sub Properties"
                                   attrs="{'invisible':[('state','!=','new_draft'),'|',('lable_bool','=',True),('lable_bool','=',False)]}"/>
                        <newline/>
                        <field name="child_ids" nolabel="1"
                               attrs="{'invisible':[('state','!=','new_draft'),'|',('lable_bool','=',True),('lable_bool','=',False)],'readonly':[('state','=','draft')]}">
                            <tree decoration-danger="state=='book'" decoration-muted="state=='cancel'"
                                  create='false'> <!--colors="black:state == 'draft';red:state == 'book';gray:state == 'cancel';"-->
                                <field name="name" readonly="1"/>
                                <field name="property_manager"
                                       attrs="{'required':[('state','in',('book','normal','close','sold'))]}"
                                       placeholder="Owner Name" string="Owner Name"/>
                                <field name="label_id"/>
                                <field name="state" readonly='1'/>
                                <button name="edit_status" states="draft" type="object"
                                        attrs="{'invisible':[('state','in',('new_draft','book','normal','close','sold','cancel'))]}"
                                        context="{'book':True}" icon="fa-check-circle"/>
                                <button name="edit_status_book" states="Book" type="object"
                                        attrs="{'invisible':[('state','in',('draft','new_draft','close', 'cancel'))]}"
                                        context="{'book':False}" icon="fa-times-circle "/>
                            </tree>
                        </field>
                        <newline/>
                        <separator string="Sub Properties"
                                   attrs="{'invisible':[('is_sub_property','=',True),('state','in',('new_draft','draft','book','normal','close','sold','cancel'))]}"/>
                        <newline/>
                        <field name="new_child_ids" nolabel="1"
                               attrs="{'invisible':[('is_sub_property','=',True),('state','in',('new_draft','draft','book','normal','close','sold','cancel'))],'readonly': [('state','=','draft')]}">
                            <tree decoration-danger="state=='book'" decoration-muted="state=='cancel'"
                                  editable="bottom"> <!--colors="black:state == 'draft';red:state == 'book';gray:state == 'cancel';"-->
                                <field name="name" readonly="1"/>
                                <field name="property_manager" placeholder="Owner Name" string="Owner Name"
                                       attrs="{'required':[('state','in',('book','normal','close','sold'))]}"/>
                                <field name="label_id"/>
                                <field name="state"/>
                                <field name="book_property" string="Book" sum="booked"
                                       attrs="{'invisible':[('state','in',('draft','book','normal','close','sold','cancel'))]}"/>
                                <field name="available_property" string="Available" sum="available"
                                       attrs="{'invisible':[('state','in',('draft','book','normal','close','sold','cancel'))]}"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_created_kanban_view" model="ir.ui.view">
        <field name="name">property.created.kanban</field>
        <field name="model">property.created</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="state"/>
                <field name="color"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="type_id"/>
                <field name="furnished"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="city"/>
                <field name="lable_bool"/>
                <field name="image"/>
                <field name="id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_vignette oe_semantic_html_override oe_kanban_card oe_kanban_project oe_kanban_global_click">
                            <table width="100%">
                                <tr>
                                    <td width="30%">
                                        <a type="open">
                                            <t t-if="record.image">
                                                <div class="o_kanban_image">
                                                    <img alt="image"
                                                         style="width:100% !important;height:150% !important;"
                                                         t-att-alt="record.name.raw_value"
                                                         t-att-src="kanban_image('account.asset.asset', 'image', record.id.value)"/>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <div class="o_kanban_image">
                                                    <img alt="image"
                                                         style="width:100% !important;height:150% !important;"
                                                         t-att-alt="record.name.raw_value"
                                                         t-att-src="_s + &quot;/base/static/img/company_image.png&quot;"/>
                                                </div>
                                            </t>
                                        </a>
                                    </td>
                                    <td width="67%">
                                        <div class="oe_kanban_details">
                                            <h4 class="oe_partner_heading">
                                                <a type="open">
                                                    <field name="name"/>
                                                </a>
                                            </h4>
                                            <ul>
                                                <li t-if="record.type_id.raw_value ">
                                                    <b>Type :
                                                    </b>
                                                    <field name="type_id"/>
                                                </li>
                                                <li t-if="record.furnished.raw_value">
                                                    <b>Furnishing :
                                                    </b>
                                                    <field name="furnished"/>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                    <td width="3%">
                                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                                <a class="dropdown-toggle btn" data-toggle="dropdown" href="#"
                                                   role="button">
                                                    <span class="fa fa-bars fa-lg" title="icon"/>
                                                </a>
                                                <ul aria-labelledby="dLabel" class="dropdown-menu" role="menu">
                                                    <t t-if="widget.editable">
                                                        <li>
                                                            <a type="edit">Edit</a>
                                                        </li>
                                                    </t>
                                                    <t t-if="widget.deletable">
                                                        <li>
                                                            <a type="delete">Delete</a>
                                                        </li>
                                                    </t>
                                                    <li>
                                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <ul>
                                            <li style="margin-top:1px;">
                                                <b>Address :
                                                </b>
                                            </li>
                                            <li t-if="record.street.raw_value">
                                                <field name="street"/>
                                            </li>
                                            <li t-if="record.state_id.raw_value and record.city.raw_value and record.country_id.raw_value">
                                                <field name="city"/>
                                                ,
                                                <field name="state_id"/>
                                                ,
                                                <field name="country_id"/>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_property_created_search" model="ir.ui.view">
        <field name="name">property.created.search</field>
        <field name="model">property.created</field>
        <field name="arch" type="xml">
            <search string="Property Booking">
                <filter domain="[('state','=','draft')]" name="available" string="Available"/>
                <filter domain="[('state','=','new_draft')]" name="Draft" string="Booking Open"/>
                <filter domain="[('state','=','normal')]" name="on_lease" string="On Lease"/>
                <filter domain="[('state','=','close')]" name="sale" string="Sale"/>
                <filter domain="[('state','=','sold')]" name="sold" string="Sold"/>
                <filter domain="[('state','=','book')]" name="book" string="Book"/>
                <filter domain="[('lable_bool','=',False)]" name="property" string="Property"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="furnished"/>
                <field name="ground_rent" string="Ground rent"/>
                <newline/>
                <group col="10" colspan="4" expand="0" string="Group By...">
                    <filter context="{'group_by':'parent_id'}" domain="[]" icon="terp-personal" name="parentproperty"
                            string="Parent Property"/>
                    <filter context="{'group_by':'furnished'}" domain="[]" icon="terp-personal" name="furnish_type"
                            string="Furnish Type"/>
                    <filter context="{'group_by':'label_id'}" domain="[]" icon="terp-personal" name="label"
                            string="Label"/>
                    <filter context="{'group_by':'state'}" domain="[]" icon="terp-personal" name="state"
                            string="State"/>
                    <filter context="{'group_by':'city'}" domain="[]" icon="terp-personal" name="city" string="City"/>
                    <filter context="{'group_by':'country_id'}" domain="[]" icon="terp-personal" name="country"
                            string="Country"/>
                </group>
            </search>
        </field>
    </record>

    <record id="property_created_tree" model="ir.ui.view">
        <field name="name">property.created.tree</field>
        <field name="model">property.created</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state=='book'" decoration-info="state == 'draft'"
                  decoration-muted="state=='cancel'"
                  string="Properties"> <!---colors="black:state == 'new_draft';blue:state == 'draft';red:state == 'book';gray:state == 'cancel';"-->
                <field name="name"/>
                <field name="floor"/>
                <field name="no_of_property"/>
                <field name="furnished"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="sub_property_created_tree" model="ir.ui.view">
        <field name="name">sub.property.created.tree</field>
        <field name="model">property.created</field>
        <field name="arch" type="xml">
            <tree create="false" decoration-danger="state=='book'" decoration-info="state == 'draft'"
                  decoration-muted="state=='cancel'"
                  string="Properties"> <!--colors="black:state == 'new_draft';blue:state == 'draft';red:state == 'book';gray:state == 'cancel';"-->
                <field name="name"/>
                <field name="parent_property_rel"/>
                <field name="label_id"/>
                <field name="no_of_property"/>
                <field name="furnished"/>
                <field name="state"/>
                <field invisible="1" name="is_sub_property"/>
                <button attrs="{'invisible':['|',('is_sub_property','=',False),('state','!=','cancel')]}"
                        name="split_property" string="Split Properties" type="object"/>
            </tree>
        </field>
    </record>

    <record id="action_create_property2" model="ir.actions.act_window">
        <field name="name">Property Booking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.created</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_state':'draft'}</field>
        <field name="domain">[('lable_bool','=',False)]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create Property Booking.
            </p>
        </field>
    </record>

    <record id="action_create_sub_property" model="ir.actions.act_window">
        <field name="name">Sub Property</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.created</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sub_property_created_tree"/>
        <field name="domain">[('lable_bool','=',True)]</field>
        <field name="context">{'search_default_parentproperty':1,'default_state':'draft'}</field>
    </record>

    <menuitem action="action_create_property2" id="menu_create_property2" name="Book Property"
              parent="menu_sub_property_creation"/>

    <menuitem action="action_create_sub_property" id="menu_create_sub_property2" name="Sub Property"
              parent="menu_sub_property_creation"/>

    <record id="view_property_label_form" model="ir.ui.view">
        <field name="name">property.label.form</field>
        <field name="model">property.label</field>
        <field name="arch" type="xml">
            <form string="Label">
                <sheet>
                    <separator string="Label Name:"/>
                    <h3>
                        <group col="2">
                            <field name="name" placeholder="Number Of BHK" style="width:30%%;"/>
                            <field name="code" placeholder="Code for label" style="width:30%%;"/>
                        </group>
                    </h3>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_label_tree" model="ir.ui.view">
        <field name="name">property.label.tree</field>
        <field name="model">property.label</field>
        <field name="arch" type="xml">
            <tree string="Label">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="action_property_label" model="ir.actions.act_window">
        <field name="name">Label</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">property.label</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem action="action_property_label" id="menu_property_label2" name="Label"
              parent="property_management.menu_configuration_main"/>

</odoo>
