<odoo>

    <!-- maintenance Kanban view Inherited -->
    <record id="maintenance_request_equipment_view_kanban_id" model="ir.ui.view">
        <field name="name">property.maintenance.request.kanban</field>
        <field name="model">maintenance.request</field>
		<field name="priority">10</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_kanban"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="message_needaction_counter" invisible="1"/>
            </field>
            <xpath expr="//templates" position="replace">
                <templates>
                    <t t-name="kanban-tooltip">
                        <ul class="oe_kanban_tooltip">
                            <li>
                                <b>Property:</b>
                                <field name="property_id"/></li>
                            <li>
                                <b>Request to:</b>
                                <field name="user_id"/></li>
                        </ul>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click oe_semantic_html_override">
                            <div class="o_dropdown_kanban dropdown">

                                <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit...</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_content" tooltip="kanban-tooltip">
                                <div class="o_kanban_record_top">
                                    <b class="o_kanban_record_title"><field name="name"/></b>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="oe_grey" t-if="record.property_id.raw_value">
                                        <field name="property_id"/><br/>
                                    </span>
                                    <span name="owner_user_id" t-if="record.owner_user_id.raw_value">Requested by :
                                        <field name="owner_user_id"/><br/></span>
                                    <span class="oe_grey" t-if="record.equipment_id.raw_value"><field name="equipment_id"/><br/></span>
                                    <span t-if="record.category_id.raw_value"><field name="category_id"/></span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <t t-if="record.message_needaction_counter.raw_value">
                                            <span role="alert" class="oe_kanban_mail_new" title="Unread Messages"><i class="fa fa-comments" role="img" aria-label="Unread Messages"/><t t-raw="record.message_needaction_counter.raw_value"/></span>
                                        </t>
                                        <div class="o_kanban_inline_block ml4 mr4">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="kanban_state" widget="state_selection"/>
                                        <img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" t-att-title="record.user_id.value" t-att-alt="record.user_id.value" width="24" height="24" class="oe_kanban_avatar float-right"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"/>
                        </div>
                    </t>
                </templates>
            </xpath>
        </field>
    </record>

    <!-- Request : views -->
    <record id="maintenance_request_form_view_Inherit" model="ir.ui.view">
        <field name="name">property.maintenance.form</field>
        <field name="model">maintenance.request</field>
		<field name="priority">10</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='reset_equipment_request']" position="after">
                <button name="create_invoice" string="Create Invoice" type="object" class="btn-primary" attrs="{'invisible': ['|',('invc_check','=',True),
                             ('done','!=',True)]}"/>
                <button name="open_invoice" string="Open Invoice" type="object" class="btn-primary" attrs="{'invisible': [('invc_check','!=',True)]}"/>
            </xpath>
            <field name='owner_user_id' position='before'>
                <field name='property_id'/>
                <field name="utility_id" domain="[('compound_property_id','=',property_id)]" invisible="1"/>
                <field name="compound_utility_id" domain="[('compound_property_id','=',property_id)]"/>
            </field>
            <field name="maintenance_type" position="after">
                <field name="tenant_id"/>
            </field>
            <field name="priority" position="before">
                <field name="cost" string="Cost" class="oe_inline" attrs="{'readonly':[('done','=',True)]}"/>
                <field name="renters_fault" attrs="{'readonly':[('done','=',True)]}"/>
                <field name='invc_id' readonly='True'/>
                <field name='date_invoice' readonly='True'/>
                <field name="done" invisible="1"/>
                <field name="invc_check" invisible="1"/>
            </field>
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Property Details">
                        <button name="open_google_map" string="Get Location" type="object" icon="fa-location-arrow" colspan="2" class="oe_inline oe_stat_button"/>
                        <separator string="Property Address"/>
                        <group colspan="4" col="4">
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" class="o_address_street" attrs="{'readonly':[('done','=',True)]}" placeholder="Street.."/>
                                <field name="street2" class="o_address_street" placeholder="Street2..." attrs="{'readonly':[('done','=',True)]}"/>
                                <field name="township" placeholder="Township..."/>
                                <field name="city" placeholder="City" attrs="{'readonly':[('done','=',True)]}" class="o_address_city" style="width: 35%%"/>
                                <field name="state_id" attrs="{'readonly':[('done','=',True)]}" class="o_address_state oe_no_button" placeholder="State" style="width: 35%%" options='{"no_open": True}'/>
                                <field name="zip" placeholder="ZIP" attrs="{'readonly':[('done','=',True)]}" class="o_address_zip" style="width: 25%%"/>
                                <field name="country_id" placeholder="Country" attrs="{'readonly':[('done','=',True)]}" class="o_address_country oe_no_button" options='{"no_open": True, "no_create": True}'/>
                            </div>
                            <field name="account_id" domain="[('company_id', '=', company_id)]" required="1"/>
                        </group>
                    </page>
                    <page string="Description">
                        <separator string="Maintenance Description"/>
                        <field name='description' placeholder="Internal Note..."/>
                    </page>
                </notebook>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly':[('done','=',True)]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='maintenance_team_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('done','=',True)]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='schedule_date']" position="attributes">
                <attribute name="attrs">{'readonly':[('done','=',True)]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='duration']" position="attributes">
                <attribute name="attrs">{'readonly':[('done','=',True)]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='request_date']" position="attributes">
                <attribute name="attrs">{'readonly':[('done','=',True)]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='close_date']" position="attributes">
                <attribute name="attrs">{'readonly':[('done','=',True)]}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('done','=',True)]}
                </attribute>
            </xpath>
            <field name="equipment_id" position="replace"/>
            <field name="category_id" position="replace"/>
            <field name="description" position="replace"/>
        </field>
    </record>

    <menuitem
        id="maintenance.menu_maintenance_title"
        name="Property Maintenance"
        web_icon="maintenance,static/description/icon.png"
        sequence="110"
        groups="maintenance.group_equipment_manager,property_maintenance.groups_property_maintenance_manager,property_maintenance.groups_property_maintenance_worker"/>

</odoo>
