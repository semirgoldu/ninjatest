                        <page name="tenancy_history" string="Rents,Rates &amp; Tenancy"
                              attrs="{'readonly':[('state','in',('sold','close'))]}">
                            <group colspan="2">
                                <!-- <separator string="Property Rent" colspan="4"/> -->
                                <group colspan='4' col='4'>

                                    <field name="current_tenant_id" invisible="1"/>
                                </group>
                            </group>
                            <group colspan="2">
                                <separator string="Tenancy Property" colspan="4"/>
                                <field name="tenancy_property_ids" colspan="4" readonly="1" nolabel="1"
                                       context="{'form_view_ref': 'property_management.property_analytic_view_form'}">
                                    <tree string="Tenancy Property">
                                        <field name="name" string="Tenancy Name"/>
                                        <field name="code" string="Code"/>
                                        <field name="tenant_id" string="Tenant Name"/>
                                        <field name="date_start"/>
                                        <field name="date" string="End Date"/>
                                        <field name="rent_type_id"/>
                                        <field name="rent" sum="Total Rent"/>
                                        <field name="deposit" sum="Totoal Deposit"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                </field>
                            </group>
                        </page>

                        <page name="utilities" string="Utility,Insurance &amp; Safety Certificate"
                              attrs="{'readonly':[('state','in',('sold','close'))]}">
                            <separator string="Utilities" colspan="4"/>
                            <field name="utility_ids" nolabel="1">
                                <tree string="Utility" editable="bottom">
                                    <field name="utility_id" widget="selection"/>
                                    <field name="contact_id"/>
                                    <field name="ref"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                    <field name="note"/>
                                </tree>
                                <form string="Utility">
                                    <group>
                                        <field name="utility_id" widget="selection"/>
                                        <field name="contact_id"/>
                                        <field name="ref"/>
                                        <field name="issue_date"/>
                                        <field name="expiry_date"/>
                                        <field name="note"/>
                                    </group>
                                </form>
                            </field>

                            <separator string="Safety Certificate" colspan="4"/>
                            <field name="safety_certificate_ids" nolabel="1">
                                <tree string="Safety Certificate" editable="bottom">
                                    <field name="name"/>
                                    <field name="contact_id" widget="selection"/>
                                    <field name="ref"/>
                                    <field name="expiry_date"/>
                                    <field name="ew"/>
                                    <field name="weeks"/>
                                </tree>
                                <form string="Safety Certificate">
                                    <group colspan='4' col='4'>
                                        <field name="name"/>
                                        <field name="contact_id" widget="selection"/>
                                        <field name="ref"/>
                                        <field name="expiry_date"/>
                                        <field name="ew"/>
                                        <field name="weeks"/>
                                    </group>
                                </form>
                            </field>
                            <group colspan="2">
                                <separator string="Property Insurance" colspan="4"/>
                                <field name="property_insurance_ids" colspan="4" nolabel="1">
                                    <form string="Insurance">
                                        <group colspan='4' col='4'>
                                            <field name="name"/>
                                            <field name="policy_no"/>
                                            <field name="start_date"/>
                                            <field name="end_date"/>
                                            <field name="premium"/>
                                            <field name="payment_mode_type"/>
                                            <field name="company_id"/>
                                            <field name="contact"/>
                                            <field name="doc_name" readonly="0" invisible="1"/>
                                            <field name="contract" filename="doc_name"/>
                                        </group>
                                    </form>
                                    <tree string="Insurance">
                                        <field name="name"/>
                                        <field name="policy_no"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="premium" sum="Total Premium"/>
                                        <field name="payment_mode_type"/>
                                        <field name="company_id"/>
                                        <field name="contact"/>
                                        <field name="doc_name" readonly="0" invisible="1"/>
                                        <field name="contract" filename="doc_name"/>
                                    </tree>
                                </field>
                            </group>
                        </page>

                        <page name="nearest_place" string="Nearest Places">
                            <group>
                                <separator string="Nearest Property" colspan="4"/>
                                <field name="nearby_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="distance"/>
                                    </tree>
                                    <form string="Documents">
                                        <group colspan="4" col="4">
                                            <field name="name"/>
                                            <field name="distance"/>
                                            <field name="type"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>

                        <page name="photos" string="Floor Plans, Photos &amp; Documents">
                            <group>
                                <separator string="Floor Plans" colspan="4"/>
                                <field name="floor_plans_ids" nolabel="1" colspan="4">
                                    <tree string="Property Floor Plans">
                                        <field name="photos_description"/>
                                        <field name="doc_name" readonly="0" invisible="1"/>
                                        <field name="photos" filename="doc_name"/>
                                    </tree>
                                    <form string="Property Floor Plans">
                                        <group colspan="4">
                                            <field name="photos_description"/>
                                            <field name="photos" filename="doc_name" required="1"/>
                                            <field name="doc_name" readonly="0" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                            <group>
                                <separator string="Photos" colspan="4"/>
                                <field name="property_photo_ids" nolabel="1" colspan="4">
                                    <tree string="Photos">
                                        <field name="photos_description"/>
                                        <field name="doc_name" readonly="0" invisible="1"/>
                                        <field name="photos" filename="doc_name"/>
                                    </tree>
                                    <form string="Documents">
                                        <group colspan="4">
                                            <field name="photos_description"/>
                                            <field name="photos" filename="doc_name" required="1"/>
                                            <field name="doc_name" readonly="0" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                            <newline/>
                            <group>
                                <separator string="Documents" colspan="4"/>
                                <field name="contract_attachment_ids" nolabel="1" colspan="4">
                                    <tree string="Documents">
                                        <field name="name"/>
                                        <field name="expiry_date"/>
                                        <field name="doc_name" readonly="0" invisible="1"/>
                                        <field name="contract_attachment" filename="doc_name"/>
                                    </tree>
                                    <form string="Documents">
                                        <group colspan="4" col="4">
                                            <field name="name" colspan="2"/>
                                            <field name="expiry_date"/>
                                            <newline/>
                                            <field name="contract_attachment" filename="doc_name" required="1"/>
                                            <field name="doc_name" readonly="0" invisible="1"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                        <page name="componud_utilities" string="Community/Compound &amp; Utilities"
                              attrs="{'invisible':[('is_compound', '=', False)]}">
                            <separator string="Utilities" colspan="4"/>
                            <field name="compound_utility_ids" nolabel="1">
                                <tree string="Utility" editable="bottom">
                                    <field name="utility_id" widget="selection"/>
                                    <field name="contact_id"/>
                                    <field name="ref"/>
<!--                                    <field name="issue_date"/>-->
<!--                                    <field name="expiry_date"/>-->
                                    <field name="note"/>
                                </tree>
                                <form string="Utility">
                                    <group>
                                        <field name="utility_id" widget="selection"/>
                                        <field name="contact_id"/>
                                        <field name="ref"/>
<!--                                        <field name="issue_date"/>-->
<!--                                        <field name="expiry_date"/>-->
                                        <field name="note"/>
                                    </group>
                                </form>
                            </field>

                            <separator string="Common Area" colspan="4"/>
                            <field name="compound_utility_line_ids" nolabel="1">
                                <tree string="Compound Utility" editable="bottom">
                                    <field name="compound_utility_id"/>
                                    <field name="contact_id"/>
                                    <field name="ref"/>
                                    <field name="note"/>
                                </tree>
                                <form string="Utility">
                                    <group>
                                        <field name="compound_utility_id" widget="selection"/>
                                        <field name="contact_id"/>
                                        <field name="ref"/>
                                        <field name="note"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <newline/>
                    <separator string="Notes" colspan="2"/>
                    <field name="note" nolabel="1" colspan="2"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Property Tree View -->
    <record id="property_view_asset_tree" model="ir.ui.view">
        <field name="name">property.view.asset.tree</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="category_id"/>
                <field name="date"/>
                <field name="type_id"/>
                <field name="furnished"/>
                <field name="value"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Property Tree View -->
    <record id="property_view_asset_tree1" model="ir.ui.view">
        <field name="name">property.view.asset.tree</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="child_ids"/>
                <field name="state_id"/>
                <field name="city"/>
                <field name="township"/>
            </tree>
        </field>
    </record>

    <!-- Property Search View -->
    <record id="view_account_asset_search" model="ir.ui.view">
        <field name="name">account.asset.asset.search</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <search string="Property View">
                <filter string="Active" name="active" domain="[('active','=',1)]"/>
                <filter string="In Active" name="active" domain="[('active','!=',1)]"/>
                <filter string="Available" name="available" domain="[('state','=','draft')]"/>
                <filter string="On Lease" name="on_lease" domain="[('state','=','normal')]"/>
                <filter string="Booked" name="book" domain="[('state','=','book')]"/>
                <filter string="Cancel" name="cancel" domain="[('state','=','cancel')]"/>
                <filter string="Sale" name="sale" domain="[('state','=','close')]"/>
                <filter string="Sold" name="sold" domain="[('state','=','sold')]"/>
                <filter string="Parent Property" name="property" domain="[('parent_id','=',False)]"/>
                <filter string="Child Property" name="property" domain="[('parent_id','!=',False)]"/>
                <field name="name"/>
                <field name="type_id"/>
                <field name="parent_id"/>
                <field name="furnished"/>
                <field name="ground_rent"/>
                <field name="date"/>
                <newline/>
                <group expand="0" string="Group By..." colspan="4" col="10">
                    <filter string="Parent Property" name="parentproperty" icon="terp-personal" domain="[]"
                            context="{'group_by':'parent_id'}"/>
                    <filter name="property_type" string="Property Type" icon="terp-personal" domain="[]"
                            context="{'group_by':'type_id'}"/>
                    <filter name="furnish_type" string="Furnish Type" icon="terp-personal" domain="[]"
                            context="{'group_by':'furnished'}"/>
                    <filter string="State" name="grpstate" icon="terp-personal" domain="[]"
                            context="{'group_by':'state'}"/>
                    <filter string="Country" name="country" icon="terp-personal" domain="[]"
                            context="{'group_by':'country_id'}"/>
                    <filter name="date" string="Date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Property Kanban View -->
    <record id="property_asset_kanban_view" model="ir.ui.view">
        <field name="name">Property Asset Kanban</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="state"/>
                <field name="color"/>
                <field name="name"/>
                <field name="id"/>
                <field name="parent_id"/>
                <field name="type_id"/>
                <field name="furnished"/>
                <field name="country_id"/>
                <field name="state_id"/>
                <field name="image_medium"/>
                <!-- <field name="image"/> -->
                <!-- <field name="image"/> -->
                <field name="city"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_vignette oe_semantic_html_override oe_kanban_card oe_kanban_project oe_kanban_global_click">
                            <table width="100%">
                                <tr>
                                    <td width="30%">
                                        <a type="open">
                                            <t t-if="record.image_medium">
                                                <div class="o_kanban_image">
                                                    <img t-att-alt="record.name.raw_value"
                                                         t-att-src="kanban_image('account.asset.asset', 'image', record.id.value)"
                                                         style="width:100% !important;height:150% !important;"/>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <div class="o_kanban_image">
                                                    <img t-att-alt="record.name.raw_value"
                                                         t-att-src='_s + "/base/static/img/company_image.png"'
                                                         style="width:100% !important;height:150% !important;"/>
                                                </div>
                                            </t>
                                        </a>
                                    </td>
                                    <td width="67%">
                                        <div class="oe_kanban_details">
                                            <h5 class="oe_partner_heading" style="padding-right: 20px;">
                                                <a type="open">
                                                    <field name="name"/>
                                                </a>
                                            </h5>
                                            <ul>
                                                <li t-if="record.type_id.raw_value ">
                                                    <b>Type :
                                                    </b>
                                                    <field name="type_id"/>
                                                </li>
                                                <li t-if="record.furnished.raw_value">
                                                    <b>Furnishing :
                                                    </b>
                                                    <field name="furnished"/>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                    <td width="3%">
                                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                                            <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                                <a class="dropdown-toggle btn" role="button" data-toggle="dropdown"
                                                   href="#">
                                                    <span title="menu_toggle" class="fa fa-bars fa-lg"/>
                                                </a>
                                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                    <t t-if="widget.editable">
                                                        <li>
                                                            <a type="edit">Edit</a>
                                                        </li>
                                                    </t>
                                                    <t t-if="widget.deletable">
                                                        <li>
                                                            <a type="delete">Delete</a>
                                                        </li>
                                                    </t>
                                                    <li>
                                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <ul>
                                            <li style="margin-top:1px;">
                                                <b>Address :
                                                </b>
                                            </li>
                                            <li t-if="record.street.raw_value">
                                                <field name="street"/>
                                            </li>
                                            <li t-if="record.state_id.raw_value and record.city.raw_value and record.country_id.raw_value">
                                                <field name="city"/>
                                                ,
                                                <field name="state_id"/>
                                                ,
                                                <field name="country_id"/>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Property Gantt View -->
    <record id="view_property_gantt" model="ir.ui.view">
        <field name="name">property_gantt</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <gantt date_start="date" date_stop="sale_date" string="Sale" progress="progress">
            </gantt>
        </field>
    </record>

    <!-- Property Graph View -->
    <record id="view_property_graph_view" model="ir.ui.view">
        <field name="name">Property_graph</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <pivot string="Property Analysis">
                <field name="name" type="row"/>
                <field name="value" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action For Property Views -->
    <record id="action_property_assets_view" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">account.asset.asset</field>
        <field name="view_mode">kanban,tree,form,pivot</field>
        <field name="search_view_id" ref="property_management.view_account_asset_search"/>
        <field name="context">{'search_default_grpstate':1}</field>
        <field name="domain">[]</field>
    </record>

    <!--Action for Property Tenancy Tree -->
    <record id="action_property_asset_tree_view" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="property_view_asset_tree"/>
        <field name="act_window_id" ref="action_property_assets_view"/>
    </record>

    <!--Property Tenancy Form -->
    <record id="action_property_asset_kanban_view" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="property_asset_kanban_view"/>
        <field name="act_window_id" ref="action_property_assets_view"/>
    </record>

    <!--Property Tenancy Graph -->
    <record id="action_property_asset_graph_view" model="ir.actions.act_window.view">
        <field eval="4" name="sequence"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_property_graph_view"/>
        <field name="act_window_id" ref="action_property_assets_view"/>
    </record>

    <!--Hierarchical Tree view for Department -->
    <record id="view_account_asset_asset_hirarch_tree" model="ir.ui.view">
        <field name="name">view.account.asset.asset.hirarch.tree</field>
        <field name="model">account.asset.asset</field>
        <!-- <field name="field_parent">child_ids</field> -->
        <field name="arch" type="xml">
            <tree string="Properties" create="false">
                <field name="name"/>
                <field name="category_id"/>
                <field name="type_id"/>
                <field name="date"/>
                <field name="furnished"/>
                <field name="value"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_create_hierarchy_property_id" model="ir.actions.act_window">
        <field name="name">Property Hierarchy</field>
        <field name="res_model">account.asset.asset</field>

        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_account_asset_asset_hirarch_tree"/>
        <field name="search_view_id" ref="property_management.view_account_asset_search"/>
        <field name="domain">[('parent_id','!=',False)]</field>
        <field name="context">{'search_default_parentproperty':1}</field>
    </record>

</odoo>
