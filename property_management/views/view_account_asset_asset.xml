<odoo>
    <!-- Property Form View -->
    <record id="ow_account_asset.view_account_asset_asset_form" model="ir.ui.view">
        <field name="name">account.asset.asset.form</field>
        <field name="model">account.asset.asset</field>
        <field name="arch" type="xml">
            <form string="Property View">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,book,normal,close,sold,cancle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_url" string="Get Location" type="object" icon="fa-location-arrow" colspan="2"
                                class="oe_inline oe_stat_button"/>
                        <button name="button_normal" string="Open" type="object" states='draft' icon="fa-folder-open"
                                colspan="2" class="oe_inline oe_stat_button"/>
                        <button name="button_close" string="Sale" type="object" states='normal' icon="fa-book"
                                class="oe_inline oe_stat_button"/>
                        <button name="button_cancel" string="End of Cycle" type="object" states='normal,sold,close'
                                icon="fa-undo" class="oe_inline oe_stat_button"/>
                        <button name="button_draft" string="Set to Available" type="object" states='cancel'
                                icon="fa-home" colspan="2" class="oe_inline oe_stat_button"/>
                        <button name="set_to_close" states="open" string="Set to Close" type="object" icon="fa fa-close"
                                class="oe_inline oe_stat_button"/>
                        <button name="set_to_draft" states="open" string="Set to Draft" type="object" icon="fa-home"
                                colspan="2" class="oe_inline oe_stat_button"/>
                        <button class="oe_inline oe_stat_button" name="open_entries" type="object" icon="fa-pencil">
                            <field string="Entries" name="entry_count" widget="statinfo"/>
                        </button>
                    </div>

                    <field name="image" widget="image" class="oe_avatar" options="{'size': [90, 90]}" modifiers="{}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                        <div class="o_row">
                            <field name="code" readonly="1" string="Code" placeholder="Code"/>
                        </div>
                    </div>

                    <group>
                        <group>
                            <label for="street" string="Address"/>
                            <div>
                                <field name="street" placeholder="Street..." required="1"/>
                                <field name="street2" placeholder="Street2..."/>
                                <field name="township" placeholder="Township..."/>
                                <div class="address_format">
                                    <field name="city" placeholder="City" style="width: 35%%" required="1"/>
                                    <field name="state_id" class="oe_no_button" placeholder="State" style="width: 40%%"
                                           options='{"no_open": True}'/>
                                    <field name="zip" placeholder="ZIP" style="width: 25%%"/>
                                </div>
                                <field name="country_id" placeholder="Country" class="oe_no_button"
                                       options='{"no_open": True, "no_create": True}' required="1"/>
                            </div>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="date"/>
                            <field name="no_of_towers" attrs="{'invisible':[('parent_id','!=',False)]}"/>
                            <field name="floor" attrs="{'invisible':[('parent_id','=',False)]}"/>
                            <field name="gfa_feet"/>
                            <field name="gfa_meter"/>
                            <field name="unit_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="total_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="ground_rent" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="rent_type_id" widget="selection" colspan="2"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="is_compound"/>
                            <field name="parent_id" placeholder="Parent Property"/>
                            <field name="type_id" required="1" placeholder="Property Type"/>
                            <field name="property_manager" required="1" placeholder="Property Manager"/>
                            <field name="furnished"/>
                            <field name="bedroom"/>
                            <field name="bathroom"/>
                            <field name="parking"/>
                            <field name="facing"/>
                            <field name="income_acc_id" required='1'/>
                            <field name="expense_account_id" required='1' domain="[('internal_type','=','other')]"/>
                            <field name="category_id" required='1' string="Property Category"/>
                            <field name="company_id" string="Property Management Company"/>
                            <field name="video_url" placeholder="//www.youtube.com/embed/mwuPTI8AT7M?rel=0"/>
                            <field name="currency_id"/>
                            <field name="no_of_property" attrs="{'invisible':[('parent_id','=',False)]}"/>
                            <field name="simulation" invisible="1"/>
                            <field name="revenue" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General" name="property_general">
                            <group>
                                <group>
                                    <field name="value" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="salvage_value" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                    <field name="value_residual" widget="monetary"
                                           options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <group>
                                    <field name="method"/>
                                    <field name="method_progress_factor"
                                           attrs="{'invisible':[('method','=','linear')], 'required':[('method','=','degressive')]}"/>
                                    <label for="method_time"/>
                                    <div>
                                        <field name="method_time" class="oe_inline"/>
                                        <button name="%(ow_account_asset.action_asset_modify)d" states="draft"
                                                string="Change Duration" type="action" icon="fa-retweet"
                                                class="oe_inline" colspan="1"/>
                                    </div>
                                    <field name="prorata" attrs="{'invisible': [('method_time','=','end')]}"/>
                                    <field name="method_number"
                                           attrs="{'invisible':[('method_time','=','end')], 'required':[('method_time','=','number')]}"/>
                                    <field name="method_period"/>
                                    <field name="method_end"
                                           attrs="{'required': [('method_time','=','end')], 'invisible':[('method_time','=','number')]}"/>
                                </group>
                            </group>
                        </page>

                        <page string="Depreciation Board" name="depreciation_line_ids">
                            <field name="depreciation_line_ids" mode="tree" options="{'reload_whole_on_button': true}"
                                   readonly="1">
                                <tree string="Depreciation Lines" decoration-info="(move_check == False)"
                                      create="false">
                                    <field name="depreciation_date"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="depreciated_value" readonly="1"/>
                                    <field name="amount"/>
                                    <field name="remaining_value" readonly="1"/>
                                    <field name="move_check"/>
                                    <field name="move_posted_check" invisible="1"/>
                                    <field name="parent_state" invisible="1"/>
                                    <button name="create_move"
                                            attrs="{'invisible':['|',('move_check','!=',False),('parent_state','!=','draft')]}"
                                            type="object">
                                        <i class="fa fa-cog" role="img" title="Create Move" />
                                    </button>
                                </tree>
                                <form string="Depreciation Lines">
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="amount"/>
                                            <field name="move_id"/>
                                            <field name="move_check"/>
                                            <field name="parent_state" invisible="1"/>
                                        </group>
                                        <group>
                                            <field name="sequence"/>
                                            <field name="depreciation_date"/>
                                            <field name="depreciated_value"/>
                                            <field name="remaining_value"/>
                                        </group>
                                    </group>
                                </form>
                            </field>

                            <button type="object" name="compute_depreciation_board" string="Compute" icon="fa-asterisk"
                                    colspan="2" attrs="{'invisible':[('state','=','close')]}"/>
                        </page>

                        <page string="History" name="history">
                            <separator string="Account History"/>
                            <newline/>
                            <field name="account_move_ids" readonly="1">
                                <tree decoration-info="state == 'draft'" string="Journal Entries">
                                    <field name="date"/>
                                    <field name="source" string="Source"/>
                                    <field name="name"/>
                                    <field name="ref"/>
                                    <field name="partner_id"/>
                                    <field name="journal_id"/>
                                    <!-- <field name="amount"/> -->
                                    <field name="state"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Sub Properties" name="sub_properties">
                            <separator string="Sub Properties" colspan="4"/>
                            <field name="child_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                <tree string="Properties">
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="date"/>
                                    <field name="type_id"/>
                                    <field name="furnished"/>
                                    <field name="value"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                            <separator string="Room Details" colspan="4"/>
                            <field name="room_ids" nolabel="1" colspan="4"/>
                        </page>

                        <page name="occupancy" string="Occupancy"
                              attrs="{'readonly':[('state','in',('sold','close'))]}">
                            <separator string="Occupancy &amp; Sales Income Simulation" colspan="4"/>
                            <group colspan="4" col="4">
                                <field name="simulation_name"/>
                                <field name="simulation_date"/>
                                <field name="construction_cost"/>
                            </group>
                            <separator string="Phases" colspan="4"/>
                            <field name="property_phase_ids" nolabel="1" colspan="4"
                                   attrs="{'readonly':[('state','in',('sold','close'))]}">
                                <tree string="Property Phase">
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="lease_price"/>
                                    <field name="occupancy_rate"/>
                                    <field name="company_income"/>
                                    <field name="commercial_tax"/>
                                </tree>
                                <form string="Property Phase">
                                    <group colspan="4" col="4">
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="lease_price"/>
                                        <field name="occupancy_rate"/>
                                        <field name="company_income"/>
                                        <field name="commercial_tax"/>
                                    </group>
                                </form>
                            </field>
                            <separator string="Property Performance" colspan="4"/>
                            <group name="property_performance" colspan="4" col="4">
                                <field name="sales_rates"/>
                                <field name="occupancy_rates"/>
                                <field name="roi"/>
                                <field name="ten_year_roi"/>
                                <!-- <field name="return_period"/ -->
                                <field name="operational_costs"/>
                            </group>
                        </page>

                        <!-- <page string="Property Budget" name="property_budget" attrs="{'readonly':[('state','in',('sold','close'))]}">
                            <separator string="Property Budget" colspan="4"/>
