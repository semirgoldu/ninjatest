<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="taqat_view_res_partner_form_inherit" model="ir.ui.view">
        <field name="name">taqat.res.partner.form.view.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='payments_page']" position="after">
                <page name="advance_payment" string="Advance Payment">
                    <group>
                        <group>
                            <field name="advance_amount"/>
                        </group>
                    </group>
                    <field name="account_payment_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
