<?xml version="1.0" encoding="utf-8"?>
<odoo>


 <record id="view_res_config_inherit_form" model="ir.ui.view">
        <field name="name">res.config.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">

        	<xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="SMS Connect" string="SMS Connect Config" data-key="sms_connect_vodafone" >
                    <h2>SMS Connect Settings</h2>
                    <div class="row mt16 o_settings_container" name="sms_connect_container">
                        <div class="col-lg-12 o_setting_box col-12 o_setting_box" id="sms_connect_settings" title="SMS Connect Settings">

                           <div class="o_setting_right_pane">
                            <label class="col-lg-3" string="Application URL" for="application_url"/>
                                 <field name="application_url" />
                             <label class="col-lg-3" string="Application Name" for="application_name"/>
                                 <field name="application_name" />
                              <label class="col-lg-3" string="Application Password" for="application_password"/>
                                 <field name="application_password" password="True"/>              
                            </div>

                           
                        </div>
                    </div>
                   

                </div>

            </xpath>

        </field>

    </record>

   
</odoo>
