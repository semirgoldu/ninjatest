<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        Donation paperformat-->
        <record id="paperformat_taqat_donation" model="report.paperformat">
            <field name="name">Donation A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">50</field>
            <field name="margin_bottom">9</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">45</field>
            <field name="dpi">90</field>
        </record>


        <!--       Donation report-->

        <record id="taqat_donation_report" model="ir.actions.report">
            <field name="name">Donation Order</field>
            <field name="model">donation.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">taqat_donation.taqat_donation_template_report</field>
            <field name="report_file">taqat_donation.taqat_donation_template_report</field>
            <field name="print_report_name">'Donation Order - %s' % (object.order_number).replace('/', '')</field>
            <field name="binding_model_id" ref="model_donation_order"/>
            <field name="binding_type">report</field>
        </record>

        <record id="taqat_container_code_report" model="ir.actions.report">
            <field name="name">Container Code</field>
            <field name="model">donation.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">taqat_donation.taqat_container_code_template_report</field>
            <field name="report_file">taqat_donation.taqat_container_code_template_report</field>
            <field name="paperformat_id" ref="product.paperformat_label_sheet"/>
            <field name="print_report_name">'Donation Order - %s' % (object.order_number).replace('/', '')</field>
            <field name="binding_model_id" ref="model_donation_order"/>
            <field name="binding_type">report</field>
        </record>
