<odoo>

    <!--Donation Containers Form View-->

    <record id="taqat_donation_containers_form_view" model="ir.ui.view">
        <field name="name">donation.Containers.form</field>
        <field name="model">donation.containers</field>
        <field name="arch" type="xml">
            <form string="Donation Containers">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="name_arabic"/>
                        </group>
                        <group>
                            <field name="barcode"/>
                            <field name="code"/>
                            <field name="zone"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="building_no"/>
                        </group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Donation Containers Tree View-->

    <record id="taqat_donation_containers_tree" model="ir.ui.view">
        <field name="name">donation.Containers.tree</field>
        <field name="model">donation.containers</field>
        <field name="arch" type="xml">
            <tree string="Donation Containers">
                <field name="name"/>
                <field name="name_arabic"/>
                <field name="barcode"/>
                <field name="code"/>
                <field name="zone"/>
                <field name="street"/>
                <field name="building_no"/>
            </tree>
        </field>
    </record>

    <!--Action for Donation Containers Views -->
    <record id="action_taqat_donation_containers_view" model="ir.actions.act_window">
        <field name="name">Donation Containers</field>
        <field name="res_model">donation.containers</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_donation_containers" name="Donation Containers" parent="taqat_donation.menu_main_donation"
              action="action_taqat_donation_containers_view"/>

</odoo>