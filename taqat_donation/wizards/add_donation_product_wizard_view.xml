<?xml version="1.0" encoding="utf-8"?>
<odoo>
		
        <record id="donation_product_views" model="ir.ui.view">
          <field name="name">donation.product.form</field>
          <field name="model">donation.product</field>
          <field name="arch" type="xml">
            <form string="Donation Product">
              <sheet>
                      <field name="donation_product_line_ids">
                          <tree editable="bottom">
                              <field name="product_id"/>
                              <field name="qty"/>

                          </tree>
                      </field>
                <footer>
                    <button name="add_product" string="Add Product" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
              </sheet>
            </form>
          </field>
       </record>

 
       <record id="action_donation_product" model="ir.actions.act_window">
          <field name="name">Add Product</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">donation.product</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
       </record>
 </odoo>
