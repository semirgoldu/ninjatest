<odoo>
    <record id='fleet_vehicle_odometer_view_tree_inherit' model='ir.ui.view'>
        <field name="name">fleet.vehicle.odometer.tree</field>
        <field name="model">fleet.vehicle.odometer</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_odometer_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='driver_id']" position="after">
                <field name="type" readonly="1" decoration-success="type == 'on'" decoration-danger="type == 'off'" widget="badge"/>
            </xpath>
            <xpath expr="//field[@name='driver_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>

    <record id='fleet_vehicle_odometer_view_form_inherit' model='ir.ui.view'>
        <field name="name">fleet.vehicle.odometer.form</field>
        <field name="model">fleet.vehicle.odometer</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_odometer_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="type" readonly="1" decoration-success="type == 'on'" decoration-danger="type == 'off'" widget="badge"/>
            </xpath>
        </field>
    </record>

    <record id='fleet_vehicle_odometer_view_driver_tree_inherit' model='ir.ui.view'>
        <field name="name">fleet.vehicle.odometer.tree.driver</field>
        <field name="model">fleet.vehicle.odometer</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_odometer_view_tree"/>
        <field name="groups_id" eval="[(4, ref('taqat_donation.group_driver'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='driver_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id='fleet_vehicle_view_form_inherit' model='ir.ui.view'>
        <field name="name">fleet.vehicle.form.driver</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='driver_id']" position="attributes">
                <attribute name="domain">['|', ('company_id', '=', False ), ('company_id', '=', company_id), ('is_driver', '=', True)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>