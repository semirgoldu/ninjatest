<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_pos_order_form_inherit_pos_payment" model="ir.ui.view">
            <field name="name">pos.order.form.pos.payment</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_ids']" position="before">
                    <group>
                        <group>
                            <field name="visa_number" readonly="1"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>