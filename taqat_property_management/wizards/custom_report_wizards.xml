    <!--    Parent Property Report-->

    <record id="parent_property_report_form_view" model="ir.ui.view">
        <field name="name">parent.property.report.form</field>
        <field name="model">parent.property.report</field>
        <field name="arch" type="xml">
            <form string="بيان العقارات">
                <group>
                    <group>
                        <field name="parent_property_ids" widget="many2many_tags" required="1"
                               domain="[('parent_id', '=', False)]"
                               options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"/>
                    </group>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

