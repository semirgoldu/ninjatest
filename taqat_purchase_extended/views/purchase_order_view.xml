<odoo>

    <record id="taqat_purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_view_invoice']" position="after">
                <button name="get_purchase_approval"
                        type="object"
                        class="oe_stat_button"
                        attrs="{'invisible': [('approval_count', '=', 0)]}"
                        icon="fa-check-circle">
                    <field name="approval_count" widget="statinfo" string="Approval"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="before">
                <field name="project_id" attrs="{'readonly': [('state', 'not in', ['draft'])]}"/>
                <field name="payment_state" attrs="{'invisible': [('invoice_count', '=', 0)]}"/>
            </xpath>
        </field>
    </record>

    <record id="taqat_purchase_order_tree" model="ir.ui.view">
        <field name="name">purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="payment_state"/>
            </xpath>
        </field>
    </record>
    <record id="taqat_purchase_order_kpis_tree" model="ir.ui.view">
        <field name="name">purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="payment_state"/>
            </xpath>
        </field>
    </record>

</odoo>

