<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="sale_quotation_report_template">
        <t t-call="web.basic_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
                <div class="container" style="padding-top: 30%;">
                    <center>
                        <div>
                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="width:30%" alt="Logo"/>
                        </div>
                        <div class="mt-4">
                            <h4>
                                <span>FROM :</span>
                                <span t-field="doc.company_id"/>
                            </h4>
                            <h4 class="mt-3">
                                <span>To :</span>
                                <span t-field="doc.partner_id"/>
                            </h4>
                        </div>

                        <div class="mt-4" style="max-width:650px;background-color:#be9c48;">
                            <h4>
                                <span>Tender NO.</span>
                            </h4>
                            <h4 class="mt-3">
                                <span>Subject : </span><span><t t-esc="doc.subject"/></span>
                            </h4>
                        </div>
                        <div class="mt-4">
                            <h3>
                                <b style="border-bottom:2px solid black">Financial Offer</b>
                            </h3>
                        </div>

                        <div style="margin-top:40%">
                            <h5>
                                <span t-esc="doc.date_order.strftime('%B, %Y')"/>
                            </h5>
                        </div>
                    </center>
                    <p style="page-break-before:always;"/>
                </div>
                <div class="container">
                    <div class="row p-0 m-0" style="align-items: flex-end !important;-webkit-box-pack: end;justify-content: right;">
                        <div class="col-8">
                            <table style="font-size:15px">
                                <tr>
                                    <th>
                                        Date :
                                    </th>
                                    <th>
                                        <span t-esc="doc.date_order.strftime('%B %d, %Y')"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th>
                                        To :
                                    </th>
                                    <th>
                                        <span t-field="doc.partner_id"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th>
                                        From :
                                    </th>
                                    <th>
                                        <span t-field="doc.company_id"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th>
                                        Reference :
                                    </th>
                                    <th>
                                        <span t-field="doc.name"/>
                                    </th>
                                </tr>
                                <tr>
                                    <th>
                                        Valid for (Days) :
                                    </th>
                                    <th>
                                        <span t-field="doc.valid_days"/>
                                    </th>
                                </tr>
                            </table>
                        </div>
                        <div class="col-4 p-0">
                             <div class="w-100 float-left" style="text-align: right;">
                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)"  style="width:60%" alt="Logo"/>
                              </div>
                        </div>
                    </div>
                    <div>
                        <center>
                            <b>
                                <u>Subject:<t t-esc="doc.subject"/></u>
                            </b>
                        </center>
                    </div>
                    <div class="mt-5 mb-2">
                        <span>
                            <b>Dear Sirs,</b>
                        </span>
                        <br/>
                        <span>
                            Kindly find our Financial Offer for the following items:-
                        </span>
                    </div>

                    <table class="table table-sm table-bordered o_main_table" style="border:1px solid black;">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_description" class="text-left" style="border:1px solid black;">Item</th>
                                <th name="th_description" class="text-left" style="border:1px solid black;">
                                    Description
                                </th>
                                <th name="th_description" class="text-left" style="border:1px solid black;">Uom</th>
                                <th name="th_quantity" class="text-right" style="border:1px solid black;">Quantity</th>
                                <th name="th_priceunit" class="text-right" style="border:1px solid black;">Unit Price
                                    <br/>
                                    <center>(<span t-field="doc.currency_id"/>)
                                    </center>
                                </th>
                                <th name="th_subtotal" class="text-right" style="border:1px solid black;">
                                    <!--                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>-->
                                    <span>Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="doc.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td name="td_count" style="border:1px solid black;">
                                            <span t-field="line.product_id"/>
                                        </td>
                                        <td name="td_name" style="border:1px solid black;">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td name="td_quantity" class="text-right" style="border:1px solid black;">
                                            <span t-field="line.product_uom"/>
                                        </td>
                                        <td name="td_quantity" class="text-right" style="border:1px solid black;">
                                            <span t-field="line.product_uom_qty"/>
                                        </td>
                                        <td name="td_priceunit" class="text-right" style="border:1px solid black;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td name="td_subtotal" class="text-right o_price_total" style="border:1px solid black;">

                                            <span t-field="line.price_total"/>
                                        </td>
                                    </t>


                                </tr>


                            </t>

                        </tbody>
                    </table>
                    <div class="mt-4">
                        <h5>
                            <b>Payment Terms:</b>
                        </h5>
                        <ul>
                            <li>
                                <span t-field="doc.payment_term_id"/>
                            </li>
                            <li>
                                <h5>
                                    <b>
                                        <u>Offer Validity:</u>
                                    </b>
                                </h5>
                                <ul>
                                    <li>
                                        Above-mentioned offer is valid for
                                        <b> <span t-esc="doc.valid_days"/> Days from the tender submission
                                            date
                                        </b>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                Hope the above meets all your requirements, looking forward to provide your
                                honorable company with our best services.
                            </li>
                        </ul>
                    </div>
                    <div class="mt-5">
                        <b>Regards,</b>
                        <div id="approval" class="row mt32 mb32">
                            <div class="col-2 bm-2" >
                                <strong>Approvals :</strong>

                            </div>
                            <div class="col-10 bm-2">
                                 <t t-foreach="doc.dynamic_approve_request_ids" t-as="approval">
                                    <t t-if="approval.status == 'approved'">

                                        <span>
                                            <t t-esc="approval.user_ids.name"/>
                                        </span>
                                         <br/>
                                    </t>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </t>
    </template>
    <template id="sale_quotation_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="taqat_sale_extended.sale_quotation_report_template" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="paperformat_taqat_sale_quotation_order" model="report.paperformat">
            <field name="name">Taqat sale quotation A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

    <record id="action_report_sale_quotaion" model="ir.actions.report">
        <field name="name">Sale Quotation</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">taqat_sale_extended.sale_quotation_document</field>
        <field name="report_file">taqat_sale_extended.sale_quotation_document</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)
        </field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="paperformat_id" ref="taqat_sale_extended.paperformat_taqat_sale_quotation_order"/>
        <field name="binding_type">report</field>
    </record>



</odoo>