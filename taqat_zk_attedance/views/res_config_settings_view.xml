<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="taqat_zk_attendance_res_config_view" model="ir.ui.view">
        <field name="name">zk.attendance.res.config.view</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="60"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="ZK Attendance" string="ZK Attendance"
                     data-key="hr_attendance">
                    <h2>ZK Attendance</h2>
                    <div class="row mt16 o_settings_container" name="zk_attendance_row">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div id="zk_url" class="o_setting_right_pane">
                                <span class="o_form_label">ZK Base URL</span>
                                <br/>
                                <field name="zk_url"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>