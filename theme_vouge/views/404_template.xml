<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="page_404_template" inherit_id="website.page_404">
		<xpath expr="//div[hasclass('container')]" position="replace">
			<div class="container">
				<div class="oe_structure">
					<div class="alert alert-info mt32">
		                <p>This page does not exist, but you can create it as you are administrator of this site.</p>
		                <a role="button" class="btn btn-primary js_disable_on_click" t-attf-href="/website/add/#{ path }#{ from_template and '?template=%s' % from_template }">Create Page</a>
		            </div>
		            <div class="text-center text-muted mb32">Edit the content below this line to adapt the default "page not found" page.</div>
				</div>
			</div>
		</xpath>
	</template>
	
	<template id="404_template" inherit_id="http_routing.404">
		<xpath expr="//section[hasclass('s_text_image')]" position="replace">
			<div class="oe_structure oe_empty"/>
			<section class="template_404_page" style="background-image: url('/theme_vouge/static/src/img/404.jpg');">
				<div class="container">
					<div class="row">
						<div class="col-md-12 text-center">
							<h1 class="title">404</h1>
							<div class="s_btn mt32" data-name="Button">
								<a class="btn btn-secondary btn-lg home_btn" href="/">Go To Home</a>
							</div>
						</div>
					</div>
				</div>
			</section>
			<div class="oe_structure oe_empty"/>
		</xpath>
	</template>
</odoo>
