<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="theme_vouge_header11" inherit_id="website.layout" name="Header Eleven" active="False">
		<xpath expr="//header//nav" position="replace">
			<nav data-name="Navbar" id="vouge-header11" t-attf-class="vouge-header11">
				<div class="top-header d-none d-md-block">
					<div class="container extended-container">
						<div class="row justify-content-center">
							<div class="col-md-12">
								<div class="d-flex align-items-center justify-content-between">
									<div class="left-content">
										<ul class="nav navbar-nav flex-row justify-content-md-start">
											<li class="nav-item">
												<a href="#">About Us</a>
											</li>
											<li class="nav-item">
												<a href="#">My Account</a>
											</li>
											<li class="nav-item">
												<a href="#">Wishlist</a>
											</li>
											<li class="nav-item">
												<a href="#">Order Tracking</a>
											</li>
										</ul>
									</div>
									<div class="middle-content d-none d-xl-block">
										<p class="mb-0">Trendy 25silver jewelry, save up 35% off today</p>
									</div>
									<div class="right-content d-flex justify-content-md-end align-items-center">
										<div class="contact-detail">
											<span>Need help? Call Us:</span>
											<a href="tel:+1 (650) 555-0111">+1 (650) 555-0111</a>
										</div>
										<!-- Pricelist Selector -->
										<t t-call="theme_vouge.placeholder_vouge_header_pricelist"/>

										<!-- Language Selector -->
										<t t-call="website.placeholder_header_language_selector">
											<t t-set="_div_classes" t-valuef="my-auto ml-0"/>
										</t>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="middle-header">
					<div class="container extended-container">
						<div class="row justify-content-center">
							<div class="col-md-12">
								<div class="d-flex align-items-center justify-content-between">
									<div class="header-logo d-flex d-md-block mbl-div">
										<div class="mobile-sidebar-toggle d-block d-md-none">
											<button type="button" id="show-sidebar" class="btn btn-sm btn-dark d-block d-md-none">
												<span class="ti ti-view-grid text-secondary"></span>
											</button>
										</div>
										<div class="vouge-logo text-center text-md-left">
											<a href="/" class="navbar-brand logo m-0">
									            <span t-field="website.logo" t-options="{'widget': 'image'}" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name" />
									        </a>
										</div>
										<t t-call="theme_vouge.vouge_header_mobile_cart"/>
									</div>
									<div class="header-search d-none d-md-block">
										<div class="bizople-search">
											<div class="search">
												<t t-call="theme_vouge.desktop_search_bar" />
											</div>
										</div>
									</div>
									
									<div class="text-right right-icons d-none d-md-flex align-items-md-center">
										<div class="wishlist ml-3 d-none d-xl-block">
											<t t-if="is_view_active('website_sale_wishlist.add_to_wishlist')">
												<t t-call="website_sale_wishlist.header_wishlist_link">
									                <t t-set="_icon" t-value="True"/>
									                <t t-set="_text" t-value="True"/>
									                <t t-set="_icon_color" t-value="'text-secondary'"/>
									                <t t-set="_item_class" t-value="'nav-item'"/>
									                <t t-set="_link_class" t-value="'nav-link'"/>
									            </t>
											</t>
										</div>
										<div class="cart bizople-add-to-cart ml-3 d-none d-md-block">
											<t t-if="is_view_active('website_sale.products_add_to_cart')">
												<t t-set="website_sale_order" t-value="website.sale_get_order()" />
												<t t-call="website_sale.header_cart_link">
									                <t t-set="_icon" t-value="True"/>
									                <t t-set="_text" t-value="True"/>
									                <t t-set="_icon_color" t-value="'text-secondary'"/>
									                <t t-set="_item_class" t-value="'nav-item'"/>
									                <t t-set="_link_class" t-value="'nav-link'"/>
									            </t>
									        </t>
										</div>
										<div class="header-myaccount ml-3 d-none d-xl-block">
				                			<a href="#" class="nav-link dropdown-toggle acc-dropdown" data-toggle="dropdown">
				                				<span t-ignore="true" t-if="not user_id._is_public()">
				                					<t t-call="theme_vouge.portal_frontend_user"/>
				                				</span>
				                				<span groups="base.group_public">
													<span class="ri-user-line ri text-secondary align-middle"></span>
												</span>
			                					<span class="account-text">Account</span>
											</a>
											<div class="dropdown-menu js_usermenu" role="menu">
												<div class="main-content text-center" t-ignore="true" t-if="not user_id._is_public()">
													<div class="text-center font-weight-bold">
														<span t-out="user_id.name[:23] + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name" />
													</div>
													<a t-attf-href="/my/home" role="menuitem" class="dropdown-item my-acc text-center">My Account</a>
													<t t-call="theme_vouge.my_address_link"/>
													<a id="o_logout" class="dropdown-item text-center"
														t-attf-href="/web/session/logout?redirect=/"
														role="menuitem">Logout</a>
												</div>
												<div groups="base.group_public" class="text-center">
													 <span t-if="request.website.viewref('theme_vouge.loginsignup_popup_bizt').active" class="nav-link openpop"
										                data-toggle="modal" data-target="#popupuserlogin" t-att-data-theme_name = "request.website.sudo().theme_id.name">
										                <span>Sign in</span>
										            </span>
										            <span t-else=''>
										            	<a class="dropdown-item" t-attf-href="/web/login">
											                <span>Sign in</span>
											            </a>
														<a class="dropdown-item" t-attf-href="/web/signup">
															<span>Register</span>
														</a>
										            </span>
												</div>
											</div>
				                		</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="bottom-header d-none d-md-block">
					<div class="container extended-container">
						<div class="row justify-content-center">
							<div class="col-md-12">
								<div class="row align-items-center m-0">
									<div class="col-md-3 col-lg-2 p-md-0">
										<div class="product-category">
											
										</div>
									</div>
									<div class="col-md-6 col-lg-7 col d-none d-md-block">
										<nav class="navbar navbar-expand-md p-0" id="bizople-header-eleven">
											<div class="collapse navbar-collapse" id="header11-menuitem">
												<ul class="nav navbar-nav" id="top_menu">
													<t t-foreach="website.menu_id.child_id" t-as="submenu">
														<t t-call="website.submenu">
															<t t-set="item_class" t-value="'nav-item'" />
															<t t-set="link_class" t-value="'nav-link'" />
														</t>
													</t>
												</ul>
											</div>
										</nav>
									</div>
									<div class="header_auto_assignm col-md-3 col-lg-3 d-none d-md-block pr-0">
											<t t-set="aut_assign_categs"
												t-value="website.get_auto_assign_category()" />
											<t t-set="categ_count" t-value="1"></t>
								
											<t t-foreach="aut_assign_categs" t-as="aut_assign_categ" t-if="categ_count == 1">
												<t t-set="categ_count" t-value="categ_count + 1"></t>
												<div class="auto_assign_categ text-right">
													<a class="categ_link text-center" t-att-href="'/shop/category/%s' % slug(aut_assign_categ)">
														<span class="icofont icofont-sale-discount mr-1"></span>
														<span t-field="aut_assign_categ.name" />
													</a>
												</div>
											</t>
										</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				
				<!-- <t t-call="theme_vouge.bizople_mbl_side_bar"/> -->
				<t t-call="theme_vouge.bizople_mbl_category_bar"/>
			</nav>
		</xpath>
		<xpath expr="//header" position="before">
			<div class="d-block d-xl-none">
				<t t-call="theme_vouge.bizople_mobile_bottom_icon_bar"/>
			</div>
			<nav id="cart_sidebar" class="cart-sidebar bg-white oe_website_sale">
				<t t-call="theme_vouge.cart_sidebar_content"/>
			</nav>
			<t t-call="theme_vouge.search_popup"/>
		</xpath>
	</template>

	<template id="header11_product_category" inherit_id="theme_vouge.theme_vouge_header11" name="Show Header Product Category">
		<xpath expr="//div[hasclass('product-category')]" postion="inside">
	        <div class="dropdown">
	            <a href="#" class="dropdown-btn text-white dropdown-toggle nav-link" data-toggle="dropdown">
	                <span class="shop-icon align-middle ti ti-layout-grid2 mr-2"/>
	                <span class="d-none d-md-inline-block"><span>Categories</span></span>
	            </a>
	            <div class="dropdown-menu vouge-header11-category" id="mbl-target">
	                <t t-set="categories" t-value="website.get_categories() if website else None"/>
	                <t t-if="categories">
	                	<t t-set="count" t-value="0"/>
                    	<div class="row no-gutters justify-content-center">
                    		<t t-foreach="categories['categories']" t-as="categ">
                    			<t t-set="count" t-value="count + 1"/>
                  				<t t-if="categ.child_id">
                  					<t t-foreach="categ.child_id" t-as="cc">
                  						<t t-set="count" t-value="count + 1"/>
                  					</t>
                  				</t>
                  				<t t-call="theme_vouge.header11-category-recursive"/>
                    		</t>
                    		<div class="col-md-6">
						        <a class="nav-link border-0 shadow-none text-center" href="/shop">
						        	<span>Show More</span>
						        </a>
						    </div>
                      	</div>
	                </t>
	            </div>
	        </div>
	    </xpath>
    </template>

    <template id="header11-category-recursive" name="header11 Category Recursive">
    	<t t-if="count &lt; 11">
	    	<div class="col-md-6">
		        <a class="nav-link" t-att-href="'/shop/category/%s' % (categ.id)">
					<span itemprop="image" t-field="categ.category_icon" t-options='{"widget": "image", "resize": None if image else "30x30"}' t-att-alt="categ.name" />
		        	<span t-out="categ.name" class="ml4"/>
		        </a>
		    </div>
		</t>
        <t t-if="categ.child_id">
            <t t-foreach="categ.child_id" t-as="categ">
                <t t-call="theme_vouge.header11-category-recursive"/>
            </t>
        </t>
    </template>

    <template id="header11_cart_sidebar_open" inherit_id="theme_vouge.theme_vouge_header11" name="Show Cart Sidebar" customize_show="True" active="True">
		<xpath expr="//nav[@id='vouge-header11']" position="attributes">
    		<attribute name="t-attf-class" add="header-cart-sidebar" separator=" "></attribute>
    	</xpath>
	</template>
</odoo>