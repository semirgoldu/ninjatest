<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="theme_vouge_header4" inherit_id="website.layout" name="Header Four" active="False">
		<xpath expr="//header//nav" position="replace">
			<nav data-name="Navbar" id="vouge-header4" t-attf-class="vouge-header4">
				<div class="top-header d-none d-md-block">
					<div class="container extended-container">
						<div class="row">
							<div class="col-md-7">
								<div class="left-content">
									<ul class="nav navbar-nav flex-row justify-content-center justify-content-md-start">
										<li class="nav-item">
											<a href="/help-center" class="nav-link">Support</a>
										</li>
										<li class="nav-item">
											<a href="/shop" class="nav-link">Store</a>
										</li>
										<li class="nav-item">
											<a href="/my/orders" class="nav-link">Order</a>
										</li>
										
										<t t-set="aut_assign_categs"
											t-value="website.get_auto_assign_category()" />
										<t t-set="categ_count" t-value="1"></t>
							
										<t t-foreach="aut_assign_categs" t-as="aut_assign_categ" t-if="categ_count == 1">
											<t t-set="categ_count" t-value="categ_count + 1"></t>
											<li class="nav-item">
												<a class="nav-link" t-att-href="'/shop/category/%s' % slug(aut_assign_categ)">
													<span class="text-primary" t-field="aut_assign_categ.name" />
												</a>
											</li>
										</t>
									</ul>
								</div>
							</div>
							<div class="col-md-5">
								<div class="right-content d-flex align-items-center justify-content-center justify-content-md-end">
									<div class="account-login dropdown" t-ignore="true" t-if="not user_id._is_public()">
										<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
											<t t-call="theme_vouge.portal_frontend_user"/>
											<span t-out="user_id.name[:23] + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name" />
										</a>
										<div class="dropdown-menu js_usermenu" role="menu">
											<a t-attf-href="/my/home" role="menuitem" class="dropdown-item">My Account</a>
											<t t-call="theme_vouge.my_address_link"/>
											<a id="o_logout" class="dropdown-item"
												t-attf-href="/web/session/logout?redirect=/"
												role="menuitem">Logout</a>
										</div>
									</div>
									<div groups="base.group_public" class="text-center">
										<span t-if="request.website.viewref('theme_vouge.loginsignup_popup_bizt').active" class="nav-link openpop" data-toggle="modal" data-target="#popupuserlogin" t-att-data-theme_name = "request.website.sudo().theme_id.name">
											<span>Sign in</span>
										</span>
										<span t-else='' class="d-flex">
											<a class="dropdown-item px-3 py-0" t-attf-href="/web/login">
												<span>Sign in</span>
											</a>
											<a class="dropdown-item px-3 py-0" t-attf-href="/web/signup">
												<span>Register</span>
											</a>
										</span>
									</div>
									<!-- Language Selector -->
									<t t-call="website.placeholder_header_language_selector">
										<t t-set="_div_classes" t-valuef="my-auto ml-0"/>
									</t>
									<!-- Pricelist Selector -->
									<t t-call="theme_vouge.placeholder_vouge_header_pricelist"/>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="middle-header">
					<div class="container extended-container">
						<div class="row align-items-center">
							<div class="col-md-3 d-flex d-md-block mbl-div">
								<div class="mobile-sidebar-toggle d-block d-md-none">
									<button type="button" id="show-sidebar" class="btn btn-sm btn-dark d-block d-md-none">
										<span class="ti ti-view-grid text-secondary"></span>
									</button>
								</div>
								<div class="vouge-logo text-center text-md-left">
									<a href="/" class="navbar-brand logo m-0">
							            <span t-field="website.logo" t-options="{'widget': 'image'}" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name" />
							        </a>
								</div>
								<t t-call="theme_vouge.vouge_header_mobile_cart"/>
							</div>
							<div class="col-md-6 col-lg-7 col d-none d-md-block">
								<nav class="navbar navbar-expand-md p-0" id="bizople-header-four">
									<div class="collapse navbar-collapse justify-content-center" id="header4-menuitem">
										<ul class="nav navbar-nav" id="top_menu">
											<t t-foreach="website.menu_id.child_id" t-as="submenu">
												<t t-call="website.submenu">
													<t t-set="item_class" t-value="'nav-item'" />
													<t t-set="link_class" t-value="'nav-link'" />
												</t>
											</t>
										</ul>
									</div>
								</nav>
							</div>
							<div class="col-md-3 col-lg-2 d-none d-md-block pl-lg-0">
								<div class="contact-content text-right">
									<span class="text-primary">Call Us:</span>
									<span class="phone-number"><span t-out="res_company.phone"/></span>
								</div>
							</div>
							
						</div>
					</div>
				</div>
				<div class="bottom-header d-none d-md-block">
					<div class="container extended-container">
						<div class="row align-items-center">
							<div class="col-md-3">
								<div class="product-category">
									
								</div>
							</div>
							<div class="col-md-6 col-lg-7 mb-4 mb-md-0">
								<div class="bizople-search">
									<div class="search">
										<t t-call="theme_vouge.desktop_search_bar" />
									</div>
								</div>
							</div>
							<div class="col-md-3 col-lg-2 mb-3 mb-md-0 text-right right-icons">
								<div class="wishlist d-inline-block mr-4">
									<t t-if="is_view_active('website_sale_wishlist.add_to_wishlist')">
										<t t-call="website_sale_wishlist.header_wishlist_link">
							                <t t-set="_icon" t-value="True"/>
							                <t t-set="_icon_color" t-value="'text-white'"/>
							                <t t-set="_item_class" t-value="'nav-item'"/>
							                <t t-set="_link_class" t-value="'nav-link'"/>
							            </t>
									</t>
								</div>
								<div class="cart d-inline-block bizople-add-to-cart" id="">
									<t t-if="is_view_active('website_sale.products_add_to_cart')">
										<t t-set="website_sale_order" t-value="website.sale_get_order()" />
										<t t-call="website_sale.header_cart_link">
							                <t t-set="_icon" t-value="True"/>
							                <t t-set="_icon_color" t-value="'text-white'"/>
							                <t t-set="_item_class" t-value="'nav-item'"/>
							                <t t-set="_link_class" t-value="'nav-link'"/>
							            </t>
							        </t>
								</div>
							</div>
							<div class="col-12 mobile-navbar p-0 d-block d-md-none">
								<div class="collapse navbar-collapse" id="header4-mbl-menuitem">
									<ul class="nav navbar-nav" id="top_menu">
										<t t-foreach="website.menu_id.child_id" t-as="submenu">
											<t t-call="website.submenu">
												<t t-set="item_class" t-value="'nav-item'" />
												<t t-set="link_class" t-value="'nav-link'" />
											</t>
										</t>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- <t t-call="theme_vouge.bizople_mbl_side_bar"/> -->
				<t t-call="theme_vouge.bizople_mbl_category_bar"/>
			</nav>
		</xpath>
		<xpath expr="//header" position="after">
			<div class="d-block d-md-none">
				<t t-call="theme_vouge.bizople_mobile_bottom_icon_bar"/>
			</div>
			<nav id="cart_sidebar" class="cart-sidebar bg-white oe_website_sale">
				<t t-call="theme_vouge.cart_sidebar_content"/>
			</nav>
			<t t-call="theme_vouge.search_popup"/>
		</xpath>
	</template>

	<template id="header4_product_category" inherit_id="theme_vouge.theme_vouge_header4" name="Show Header Product Category">
		<xpath expr="//div[hasclass('product-category')]" postion="inside">
	        <div class="dropdown">
	            <a href="#" class="dropdown-btn text-white dropdown-toggle nav-link" data-toggle="dropdown">
	                <span class="fa fa-bars mr-2"/>
	                <span class="d-none d-md-inline-block">CATEGORIES</span>
	            </a>
	            <ul class="dropdown-menu vouge-header-category" id="mbl-target">
	                <t t-set="categories" t-value="website.get_categories() if website else None"/>
	                <t t-if="categories">
	                    <t t-foreach="categories['categories']" t-as="categ">
	                          	<t t-call="theme_vouge.menu_categories_recursive"/>
	                    </t>
	                </t>
	            </ul>
	        </div>
	    </xpath>
    </template>
    <template id="menu_mbl_categories_recursive">
        <li class="dropdown dropdown-submenu nav-item">
            <a class="nav-link" t-att-href="'/shop/category/%s' % (categ.id)">
            	<span t-out="categ.name"/>
            	<t t-if="is_view_active('theme_vouge.categories_list_count')">
	            	(<span>
	                    <t t-out="categ.with_context(product_categ_search=search).product_tmpl_count"/>
	                </span>)
	            </t>
            </a>
            <i t-if="categ.child_id"
               class="fa fa-chevron-right text-primary caret-icon-pos"/>
            <ul t-if="categ.child_id"
                class="dropdown-menu">
                <t t-foreach="categ.child_id" t-as="categ">
                    <t t-call="theme_vouge.menu_mbl_categories_recursive"/>
                </t>
            </ul>
        </li>
    </template>
	
	

    <template id="bizople_mbl_side_bar" inherit_id="website.layout" name="Bizople Side Bar">
    	<xpath expr="//footer" position="after">
	    	<nav id="sidebar" class="sidebar-wrapper bg-white d-block d-xl-none">
		    	<div class="sidebar-content">
					<div class="search">
						<div class="close-mbl-sidebar bg-primary text-center">
							<span class="lnr lnr-cross text-white" id="close_mbl_sidebar"></span>
						</div>
					</div>
					<div class="card bg-white">
		                <div class="card-header">
		                  	<ul class="nav nav-tabs card-header-tabs" role="tablist">
			                    <li class="nav-item">
			                      	<a class="nav-link o_default_snippet_text active" id="nav_tabs_link_1595584408392_2" data-toggle="tab" href="#nav_tabs_content_1595584408392_2" role="tab" aria-controls="nav_tabs_content_1595584408392_2" aria-selected="true">Menu</a>
			                    </li>
			                    <li class="nav-item">
			                      	<a class="nav-link o_default_snippet_text" id="nav_tabs_link_1595584408393_3" data-toggle="tab" href="#nav_tabs_content_1595584408393_3" role="tab" aria-controls="nav_tabs_content_1595584408393_3" aria-selected="false">Category</a>
			                    </li>
		                  	</ul>
		                </div>
		                <div class="card-body tab-content">
		                  	<div class="tab-pane fade active show" id="nav_tabs_content_1595584408392_2" role="tabpanel" aria-labelledby="nav_tabs_link_1595584408392_2">
		                    	<ul class="nav navbar-nav align-items-md-center" id="top_menu">
									<t t-foreach="website.menu_id.child_id" t-as="submenu">
										<t t-call="website.submenu">
											<t t-set="item_class" t-value="'nav-item'" />
											<t t-set="link_class" t-value="'nav-link'" />
										</t>
									</t>
								</ul>
		                  	</div>
		                  	<div class="tab-pane fade" id="nav_tabs_content_1595584408393_3" role="tabpanel" aria-labelledby="nav_tabs_link_1595584408393_3">
			                    <ul class="vouge-mbl-header-category" id="o_shop_collapse_category_mobile">
					                <t t-set="categories" t-value="website.get_categories() if website else None"/>
					                <t t-if="categories">
					                    <t t-foreach="categories['categories']" t-as="categ">
				                          	<t t-call="theme_vouge.menu_mbl_categories_recursive"/>
					                    </t>
					                </t>
					            </ul>
		                  	</div>
		                </div>
		          	</div>
		    	</div>
		    </nav>
		</xpath>
    </template>
    
    <template id="bizople_mbl_category_bar" name="Mobile Category Bar">
    	 <t t-set="mobile_categories" t-value="website.get_product_category_data_menu() if website else None"/>
	 	<t t-if="mobile_categories">
	     	<div class="min-w-categ d-block d-md-none bg-white">
	         	<div class="container">
	             	<div class="row">
		                 <ul class="list-group list-group-horizontal">
			                 <t t-foreach="mobile_categories" t-as="categm">
			                 	<a t-att-href="'/shop/category/%s' % (categm.id)">
					  				<li class="list-group-item border-0">
					  					<span itemprop="image" t-field="categm.image_256" t-options='{"widget": "image", "class": "rounded-circle"}' t-att-alt="categm.name" />
					  					<p class="my-1" t-out="categm.name"></p>
					  				</li>
					  			</a>
			             	</t>
			             </ul>
	             	</div>
	         	</div>
	     	</div>
     	</t>
    </template>

    <template id="header4_cart_sidebar_open" inherit_id="theme_vouge.theme_vouge_header4" name="Show Cart Sidebar" customize_show="True" active="True">
		<xpath expr="//nav[@id='vouge-header4']" position="attributes">
    		<attribute name="t-attf-class" add="header-cart-sidebar" separator=" "></attribute>
    	</xpath>
	</template>

	<template id="mobile_search_bar" name="Mobile Search Bar">
		<div class="header-search-bar bg-white d-block d-md-none">
			<form method="get" data-snippet="s_products_searchbar_input" class="o_searchbar_form o_wsale_products_searchbar_form o_wait_lazy_js s_wsale_products_searchbar_input" action="/shop">
                <div role="search" class="input-group">
                  	<input type="search" name="bizople-search" class="search-query-bizople form-control oe_search_box" data-limit="5" data-display-description="true" data-display-price="true" data-display-image="true"  data-search-type="all" data-display-extra-link="true" data-display-detail="true" data-order-by="name asc" placeholder="Search..."/>
	                <div class="input-group-append">
	                    <button type="submit" class="btn btn-primary oe_search_button" aria-label="Search" title="Search">
	                      	<i class="fa fa-search"/>
	                    </button>
	                </div>
	            </div>
                <input name="order" type="hidden" class="o_wsale_search_order_by o_search_order_by" value="name asc"/>
            </form>
		</div>
	</template>

	<template id="desktop_search_bar" name="Desktop Search Bar">
		<form method="get" data-snippet="s_products_searchbar_input" class="o_searchbar_form o_wsale_products_searchbar_form o_wait_lazy_js s_wsale_products_searchbar_input d-flex" action="/shop">
            <t t-set="no_cat_listing" t-value="True"/>
            <t t-set="action" t-value="shop" />
          		  	<input t-if="is_sbcatetgory" type="hidden" id="tvsearchCateg" name="category" t-att-value="is_sbcatetgory.id"/>
                    <input t-elif="category" type="hidden" id="tvsearchCateg" name="category" t-att-value="category.id"/>
                    <input t-else="" type="hidden" id="tvsearchCateg" name="category"/>
                <div class="dropdown d-inline-block search-categ">
                    <button class="btn dropdown-toggle" type="button" id="categbtn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="categ-name text-truncate align-middle">
                        	<t t-if="is_sbcatetgory" t-out="is_sbcatetgory.name"/>
	                        <t t-elif="category" t-out="category.name"/>
	                        <t t-else="">All Categories</t>
                        </span>
                    </button>
                    <div class="dropdown-menu">
                        <!-- <t t-if="category">
                            <label class="dropdown-item text-primary"  t-att-data-id="category.id"><t t-out="category.name"/></label>
                        </t> -->
                        <label t-attf-class="select-category dropdown-item #{'text-primary' if not category and not is_sbcatetgory else ''}"  data-id="">All Categories</label>
                        <t t-foreach="request.env['product.public.category'].get_all_parent_category()" t-as="cat">
                            <label t-if="category" t-attf-class="dropdown-item #{'text-primary' if category.id == cat.id else ''}"  t-att-data-id="cat.id"><t t-out="cat.name"/></label>
                            <label t-else='' class="dropdown-item select-category"  t-att-data-id="cat.id"><t t-out="cat.name"/></label>
                        </t>
                    </div>
                  
                </div>
	            <div role="search" class="input-group">
	              	<input type="search" name="bizople-search" id="pwasearch" class="search-query-bizople form-control oe_search_box" data-limit="5" data-display-description="true" data-display-price="true" data-display-image="true"  data-search-type="all" data-display-extra-link="true" data-display-detail="true" data-order-by="name asc" placeholder="Search..."/>
	                <div class="input-group-append">
	                    <button type="submit" class="btn btn-primary oe_search_button" aria-label="Search" title="Search">
	                      	<i class="fa fa-search"/>
	                    </button>
	                </div>
	            </div>
            <input name="order" type="hidden" class="o_wsale_search_order_by o_search_order_by" value="name asc"/>
        </form>
	</template>

</odoo>