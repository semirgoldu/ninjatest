<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="theme_vouge_header7" inherit_id="website.layout" name="Header Seven" active="False">
		<xpath expr="//header//nav" position="replace">
			<nav data-name="Navbar" id="vouge-header7" t-attf-class="vouge-header7">
				<div class="middle-header">
					<div class="container extended-container">
						<div class="row align-items-center">
							<div class="col-md-3 d-flex d-md-block mbl-div header-left">
								<div class="mobile-sidebar-toggle d-block d-md-none">
									<button type="button" id="show-sidebar" class="btn btn-sm btn-dark d-block d-md-none">
										<span class="ti ti-view-grid text-secondary"></span>
									</button>
								</div>
								<div class="vouge-logo text-center text-md-left w-100">
									<a href="/" class="navbar-brand logo m-0">
							            <span t-field="website.logo" t-options="{'widget': 'image'}" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name" class="default-logo"/>
							            <span t-field="website.transparent_header_logo" t-options="{'widget': 'image'}" role="img" t-att-aria-label="'Logo of %s' % website.name" t-att-title="website.name" class="transparent-logo"/>
							        </a>
								</div>
								<t t-call="theme_vouge.vouge_header_mobile_cart"/>
							</div>
							<div class="col-md-6 d-none d-md-block header-center">
								<nav class="navbar navbar-expand-md p-0" id="bizople-header-seven">
									<div class="collapse navbar-collapse justify-content-center" id="header7-menuitem">
										<ul class="nav navbar-nav justify-content-center" id="top_menu">
											<t t-foreach="website.menu_id.child_id" t-as="submenu">
												<t t-call="website.submenu">
													<t t-set="item_class" t-value="'nav-item'" />
													<t t-set="link_class" t-value="'nav-link'" />
												</t>
											</t>
										</ul>
									</div>
								</nav>
							</div>
							<div class="col-md-3 text-right right-icons d-none d-md-block header-right">
								<div class="header-search align-middle d-inline-block">
									<a href="#" onclick="openSearchPopup()" class="nav-link">
										<span class="text-secondary ri ri-search-line show-search align-middle"></span>
									</a>
								</div>
								<div class="wishlist align-middle d-none d-lg-inline-block">
									<t t-if="is_view_active('website_sale_wishlist.add_to_wishlist')">
										<t t-call="website_sale_wishlist.header_wishlist_link">
							                <t t-set="_icon" t-value="True"/>
							                <t t-set="_icon_color" t-value="'text-secondary'"/>
							                <t t-set="_item_class" t-value="'nav-item'"/>
							                <t t-set="_link_class" t-value="'nav-link'"/>
							            </t>
									</t>
								</div>
								<div class="cart bizople-add-to-cart align-middle d-none d-lg-inline-block" id="">
									<t t-if="is_view_active('website_sale.products_add_to_cart')">
										<t t-set="website_sale_order" t-value="website.sale_get_order()" />
										<t t-call="website_sale.header_cart_link">
							                <t t-set="_icon" t-value="True"/>
							                <t t-set="_icon_color" t-value="'text-secondary'"/>
							                <t t-set="_item_class" t-value="'nav-item'"/>
							                <t t-set="_link_class" t-value="'nav-link'"/>
							            </t>
							        </t>
								</div>
								<div class="header-myaccount align-items-center align-middle d-none d-lg-inline-block">
		                			<a href="#" class="nav-link dropdown-toggle acc-dropdown" data-toggle="dropdown">
		                				<span t-ignore="true" t-if="not user_id._is_public()">
		                					<t t-call="theme_vouge.portal_frontend_user"/>
		                				</span>
		                				<span groups="base.group_public">
											<span class="icon icon-User text-secondary align-middle"></span>
										</span>
									</a>
									<div class="dropdown-menu js_usermenu" role="menu">
										<div class="main-content text-center" t-ignore="true" t-if="not user_id._is_public()">
											<div class="text-center font-weight-bold">
												<span t-out="user_id.name[:23] + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name" />
											</div>
											<a t-attf-href="/my/home" role="menuitem" class="dropdown-item my-acc text-center">My Account</a>
											<t t-call="theme_vouge.my_address_link"/>
											<a id="o_logout" class="dropdown-item text-center"
												t-attf-href="/web/session/logout?redirect=/"
												role="menuitem">Logout</a>
										</div>
										<div groups="base.group_public" class="text-center">
											 <span t-if="request.website.viewref('theme_vouge.loginsignup_popup_bizt').active" class="nav-link openpop"
								                data-toggle="modal" data-target="#popupuserlogin" t-att-data-theme_name = "request.website.sudo().theme_id.name">
								                <span>Sign in</span>
								            </span>
								            <span t-else=''>
								            	<a class="dropdown-item" t-attf-href="/web/login">
									                <span>Sign in</span>
									            </a>
												<a class="dropdown-item" t-attf-href="/web/signup">
													<span>Register</span>
												</a>
								            </span>
										</div>
									</div>
		                		</div>
							</div>
						</div>
					</div>
				</div>
				<t t-call="theme_vouge.bizople_mbl_category_bar"/>
			</nav>
		</xpath>
		<xpath expr="//header" position="after">
			<div class="d-block d-md-none">
				<t t-call="theme_vouge.bizople_mobile_bottom_icon_bar"/>
			</div>
			<nav id="cart_sidebar" class="cart-sidebar bg-white oe_website_sale">
				<t t-call="theme_vouge.cart_sidebar_content"/>
			</nav>
			<t t-call="theme_vouge.search_popup"/>
		</xpath>
	</template>

	<template id="header7_extended_container" inherit_id="theme_vouge.theme_vouge_header7" name="Extended Size" customize_show="True" active="True">
		<xpath expr="//div[hasclass('middle-header')]/div[hasclass('container')]" position="attributes">
			<attribute name="class" add="extended-container" separator=" "/>
		</xpath>
	</template>

	<template id="header7_cart_sidebar_open" inherit_id="theme_vouge.theme_vouge_header7" name="Show Cart Sidebar" customize_show="True" active="True">
		<xpath expr="//nav[@id='vouge-header7']" position="attributes">
    		<attribute name="t-attf-class" add="header-cart-sidebar" separator=" "></attribute>
    	</xpath>
	</template>

</odoo>