<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="product_item_stars" name="Rating: static star widget">
        <t t-set="rating_avg" t-value="round(product.rating_avg * 100) / 100"/>
        <t t-set="val_decimal" t-value="round(rating_avg % 1, 1)"/>
        <t t-set="val_integer" t-value="int(rating_avg)"/>
        <t t-set="empty_star" t-value="5 - (val_integer+1) if val_decimal else 5 - val_integer"/>
        <div t-attf-class="d-inline-block float-right product-rating #{_extra_classes}" t-att-title="rating_avg">
            <!-- <t t-foreach="range(0, val_integer)" t-as="num">
                <i class="fa fa-star" role="img"></i>
            </t> -->
            <t t-if="rating_avg">
                <i class="fa fa-star text-warning" role="img"></i>
            </t>
            <t t-else="empty_star">
                <i class="fa fa-star-o text-warning" role="img"></i>
            </t>
            <span style="margin-left:2px;">
                <t t-out="rating_avg"/><!-- <span> / 5</span> -->
            </span>
            <!-- <span style="margin-left:5px;font-size:15px;">Voir les 
            <t t-out="product.rating_avg"/><span style="margin-left:5px;font-size:15px;">avis</span></span> -->
        </div>
    </template>
</odoo>
