<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="s_home_one_newsletter" name="Home One Newsletter">
        <section class="grocery_newslatter pt32 pb32">
            <div class="container long-container">
                <section class="grocery_newslatter_content oe_img_bg o_bg_img_center">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="pt32 pb32">
                                    <h1 class="fw-700 mb-4 text-secondary">Stay home &amp; get your daily needs from our shop</h1>
                                    <p class="news_latter_title mb-5 fw-600">Start You'r Daily Shopping with <span class="text-primary">Nest Mart</span></p>
                                    
                                    <div class="s_newsletter_subscribe_form js_subscribe" data-vxml="001" data-list-id="2" data-name="Newsletter" data-snippet="s_newsletter_subscribe_form">
                                        <div class="input-group">
                                            <i class="fa fa-telegram fa-lg text-primary icon d-flex align-items-center"/>
                                            <input type="email" name="email" class="js_subscribe_email form-control fw-500" placeholder="your email..." disabled="" />
                                            <span class="input-group-append">
                                                <a role="button" href="#" class="btn btn-primary js_subscribe_btn o_submit o_default_snippet_text d-none">Subscribe</a>
                                                <a role="button" href="#" class="btn btn-success js_subscribed_btn o_submit o_default_snippet_text">Thanks</a>
                                            </span>
                                        </div>
                                    </div>
                                </div>                                               
                            </div>
                            <div class="col-lg-6 d-none d-lg-block">
                                <img class="img img-fluid newslatter_img" src="/theme_vouge/static/src/img/newslatter_img2.png"/>
                            </div>
                        </div>
                    </div>
                    
                </section>                                
            </div>
        </section>
    </template>
</odoo>