<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_electronic_banner" name="Home Banner">
		<section class="electronic-home-banner">
			<div id="electronic-carousel" class="carousel bs-slider slide  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="7000">
	          	<div class="carousel-inner" role="listbox">
	            	<div class="carousel-item active" style="background-image: url('/theme_vouge/static/src/img/electronic-banner1.jpg');">
	            		<div class="container extended-container">
	            			<div class="row position-relative">
	            				<div class="col-md-6 offset-md-1">
	            					<div class="banner-content">
	            						<div class="subtitle">Smart Devices</div>
	            						<h1 class="title">New Bluetooth<br></br>Speakers</h1>
	            						<p class="text">Get Discount upto 30% on the latest 2021 collections</p>
	            						<div class="s_btn pt16" data-name="Button">
	            							<a href="#" class="btn btn-outline-light bizople_button">Shop now</a>
	            						</div>
	            					</div>
	            				</div>
	            			</div>
	            		</div>
	            	</div>
	            	<div class="carousel-item" style="background-image: url('/theme_vouge/static/src/img/electronic-banner2.jpg');">
	            		<div class="container extended-container">
	            			<div class="row position-relative">
	            				<div class="col-md-6 offset-md-1">
	            					<div class="banner-content">
	            						<div class="subtitle">New Arrivals</div>
	            						<h1 class="title">Wireless &amp; Wired<br></br>Headphones</h1>
	            						<p class="text">Get Discount upto 30% on the latest 2021 collections</p>
	            						<div class="s_btn pt16" data-name="Button">
	            							<a href="#" class="btn btn-outline-light bizople_button">Shop now</a>
	            						</div>
	            					</div>
	            				</div>
	            			</div>
	            		</div>
	            	</div>
	          	</div>
		        <div class="slider-control">
              		<a class="left carousel-control-prev text-white font-14" data-target="#electronic-carousel" role="button" data-slide="prev">
	                	<span class="fa fa-angle-left"/>
	               	 	<b class="sr-only font-normal o_default_snippet_text">Previous</b>
	              	</a>
	              	<a class="right carousel-control-next text-white font-14" data-target="#electronic-carousel" role="button" data-slide="next">
	                	<span class="fa fa-angle-right"/>
	                	<b class="sr-only font-normal o_default_snippet_text">Next</b>
	              	</a>
	            </div>
        	</div>
		</section>
	</template>

</odoo>