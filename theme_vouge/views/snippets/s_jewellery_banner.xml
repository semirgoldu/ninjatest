<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_jewellery_banner" name="Home Banner">
		<section class="jewellery-home-banner">
			<div id="jewellery-carousel" class="carousel bs-slider slide  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="7000">
	          	<div class="carousel-inner" role="listbox">
	          		<div class="carousel-item active" style="background-image: url('/theme_vouge/static/src/img/jewellery-banner1.jpg');">
	          			<div class="container">
	            			<div class="justify-content-center">
	            				<div class="banner-content text-center">
	            					<h1><span>Luxurious &amp; Stylish</span></h1>
	            					<h2>Jewellery</h2>
	            				</div>
	            			</div>
	            		</div>
		            </div>
		            <div class="carousel-item" style="background-image: url('/theme_vouge/static/src/img/jewellery-banner2.jpg');">
		            	<div class="container">
	            			<div class="justify-content-center">
	            				<div class="banner-content text-center">
	            					<h1><span>Luxurious &amp; Stylish</span></h1>
	            					<h2>Jewellery</h2>
	            				</div>
	            			</div>
	            		</div>
		            </div>
		            <div class="carousel-item" style="background-image: url('/theme_vouge/static/src/img/jewellery-banner3.jpg');">
		            	<div class="container">
	            			<div class="justify-content-center">
	            				<div class="banner-content text-center">
	            					<h1><span>Luxurious &amp; Stylish</span></h1>
	            					<h2>Jewellery</h2>
	            				</div>
	            			</div>
	            		</div>
		            </div>
	          	</div>
	          	<ol class="carousel-indicators">
		            <li data-target="#jewellery-carousel" data-slide-to="0" class="active"/>
		            <li data-target="#jewellery-carousel" data-slide-to="1"/>
		            <li data-target="#jewellery-carousel" data-slide-to="2"/>
		        </ol>
		        <div class="slider-control d-none d-md-block">
              		<a class="left carousel-control-prev text-white font-14" data-target="#jewellery-carousel" role="button" data-slide="prev">
	                	<span class="fa fa-angle-left "/>
	               	 	<b class="sr-only font-normal o_default_snippet_text">Previous</b>
	              	</a>
	              	<a class="right carousel-control-next text-white font-14" data-target="#jewellery-carousel" role="button" data-slide="next">
	                	<span class="fa fa-angle-right"/>
	                	<b class="sr-only font-normal o_default_snippet_text">Next</b>
	              	</a>
	            </div>
        	</div>
		</section>
	</template>

</odoo>