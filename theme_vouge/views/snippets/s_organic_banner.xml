<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_organic_banner" name="Home Banner">
		<section class="organic-home-banner">
			<div id="organic-carousel" class="carousel bs-slider slide  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="7000">
	          	<div class="carousel-inner" role="listbox">
	          		<div class="carousel-item active" style="background-image: url('/theme_vouge/static/src/img/organic-banner1.jpg');">
		            	<div class="container extended-container">
        					<div class="banner-content">
        						<div class="subtitle">Discount Of 40% On All Juice</div>
        						<h2 class="title">Organically Produced<br></br>Pomegranate Juice</h2>
        						<div class="s_btn mt32" data-name="Button">
        							<a href="#" class="btn btn-light bizople_button ">our service<span class="fa fa-arrow-right ml-1"/></a>
        						</div>
        					</div>
	            		</div>
		            </div>
		            <div class="carousel-item" style="background-image: url('/theme_vouge/static/src/img/organic-banner2.jpg');">
	            		<div class="container extended-container">
        					<div class="banner-content text-right">
        						<div class="subtitle">Discount Of 40% On All Juice</div>
        						<h2 class="title">Organically Produced<br></br>Orange Juice</h2>
        						<div class="s_btn mt32" data-name="Button">
        							<a href="#" class="btn btn-light bizople_button ">shop Now <span class="fa fa-shopping-cart"/></a>
        						</div>
        					</div>
	            		</div>
		            </div>
	          	</div>
	          	<div class="slider-control d-none d-md-block">
              		<a class="left carousel-control-prev text-white font-14" data-target="#organic-carousel" role="button" data-slide="prev">
	                	<span class="fa fa-angle-left "/>
	               	 	<b class="sr-only font-normal o_default_snippet_text">Previous</b>
	              	</a>
	              	<a class="right carousel-control-next text-white font-14" data-target="#organic-carousel" role="button" data-slide="next">
	                	<span class="fa fa-angle-right"/>
	                	<b class="sr-only font-normal o_default_snippet_text">Next</b>
	              	</a>
	            </div>
	          	<ol class="carousel-indicators">
		            <li data-target="#organic-carousel" data-slide-to="0" class="active"/>
		            <li data-target="#organic-carousel" data-slide-to="1"/>
		        </ol>
        	</div>
		</section>
	</template>

</odoo>