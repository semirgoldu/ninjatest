<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_restaurant_banner" name="Home Banner">
		<section class="restaurant-home-banner">
			<div id="restaurant-carousel" class="carousel bs-slider slide  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="7000">
	          	<div class="carousel-inner" role="listbox">
	            	<div class="carousel-item active" style="background-image: url('/theme_vouge/static/src/img/restaurant-banner1.jpg');">
	            		<div class="container extended-container">
	            			<div class="row position-relative justify-content-center">
	            				<div class="banner-content">
	            					<div class="banner-icon">
	            						<img src="/theme_vouge/static/src/img/restaurant.png" class="img img-fluid"/>
	            					</div>
	            					<div class="banner-info">
	            						<h2>The Vouge World's Original Spicy<br></br>Arabita Pasta <span>/ 30% Off</span></h2>
	            						<div class="s_btn" data-name="Button">
	            							<a href="#" class="btn btn-light bizople_button">Order Now</a>
	            						</div>
	            					</div>
	            				</div>
	            			</div>
	            		</div>
	            	</div>
	            	<div class="carousel-item" style="background-image: url('/theme_vouge/static/src/img/restaurant-banner2.jpg');">
	            		<div class="container extended-container">
	            			<div class="row position-relative justify-content-center">
	            				<div class="banner-content">
	            					<div class="banner-icon">
	            						<img src="/theme_vouge/static/src/img/restaurant.png" class="img img-fluid"/>
	            					</div>
	            					<div class="banner-info">
	            						<h2>Skinless Grilled Chicken<br></br><span>Our Spiciest Chicken...</span></h2>
	            						<div class="s_btn" data-name="Button">
	            							<a href="#" class="btn btn-light bizople_button">Order Now</a>
	            						</div>
	            					</div>
	            				</div>
	            			</div>
	            		</div>
	            	</div>
	            	<div class="carousel-item" style="background-image: url('/theme_vouge/static/src/img/restaurant-banner3.jpg');">
	            		<div class="container extended-container">
	            			<div class="row position-relative justify-content-center">
	            				<div class="banner-content">
	            					<div class="banner-icon">
	            						<img src="/theme_vouge/static/src/img/restaurant.png" class="img img-fluid"/>
	            					</div>
	            					<div class="banner-info">
	            						<h2>BBQ Cotage Cheese<br></br><span>Discount Upto 40% Off</span></h2>
	            						<div class="s_btn" data-name="Button">
	            							<a href="#" class="btn btn-light bizople_button">Order Now</a>
	            						</div>
	            					</div>
	            				</div>
	            			</div>
	            		</div>
	            	</div>
	          	</div>
		        <div class="slider-control">
              		<a class="left carousel-control-prev text-white font-14" data-target="#restaurant-carousel" role="button" data-slide="prev">
	                	<span class="fa fa-angle-left"/>
	               	 	<b class="sr-only font-normal o_default_snippet_text">Previous</b>
	              	</a>
	              	<a class="right carousel-control-next text-white font-14" data-target="#restaurant-carousel" role="button" data-slide="next">
	                	<span class="fa fa-angle-right"/>
	                	<b class="sr-only font-normal o_default_snippet_text">Next</b>
	              	</a>
	            </div>
        	</div>
		</section>
	</template>

</odoo>