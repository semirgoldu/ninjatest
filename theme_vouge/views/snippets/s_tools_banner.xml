<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_tools_banner" name="Home Banner">
		<section class="tools-home-banner">
			<div id="tools-carousel" class="carousel bs-slider slide  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="7000">
	          	<div class="carousel-inner" role="listbox">
	            	<div class="carousel-item active" style="background-image: url('/theme_vouge/static/src/img/tools-banner1.jpg');">
	            		<div class="container">
            				<div class="col-lg-6 col-md-6 col-6 offset-md-6 offset-6">
            					<div class="banner-content text-right">
	            					<h3>Sliding Paint Rollers</h3>
	            					<h1>Winter Sale <span>Discount 30% off </span> Until End of February</h1>
	            					<div class="s_btn" data-name="Button">
            							<a href="#" class="btn btn-secondary bizople_button">SHOP NOW! <span class="fa fa-angle-right ml-2"/></a>
            						</div>
            					</div>
            				</div>
	            		</div>
	            	</div>
	            	<div class="carousel-item" style="background-image: url('/theme_vouge/static/src/img/tools-banner2.jpg');">
	            		<div class="container">
	            			<div class="col-lg-6 col-md-6 col-6">
            					<div class="banner-content text-left">
	            					<h3>Tools for Home Usage</h3>
	            					<h1>Winter Sale <span>Discount 30% off </span> Until End of February</h1>
	            					<div class="s_btn" data-name="Button">
            							<a href="#" class="btn btn-secondary bizople_button">SHOP NOW! <span class="fa fa-angle-right ml-2"/></a>
            						</div>
            					</div>
	            			</div>
	            		</div>
	            	</div>
	          	</div>
	          	<div class="d-block d-md-none">
		          	<ol class="carousel-indicators">
			            <li data-target="#tools-carousel" data-slide-to="0" class="active"/>
			            <li data-target="#tools-carousel" data-slide-to="1"/>
			        </ol>
			    </div>
		        <div class="slider-control d-none d-md-block">
              		<a class="left carousel-control-prev text-white font-14" data-target="#tools-carousel" role="button" data-slide="prev">
	                	<span class="fa fa-angle-left"/>
	               	 	<b class="sr-only font-normal o_default_snippet_text">Previous</b>
	              	</a>
	              	<a class="right carousel-control-next text-white font-14" data-target="#tools-carousel" role="button" data-slide="next">
	                	<span class="fa fa-angle-right"/>
	                	<b class="sr-only font-normal o_default_snippet_text">Next</b>
	              	</a>
	            </div>
        	</div>
		</section>
	</template>

</odoo>