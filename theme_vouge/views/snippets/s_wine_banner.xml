<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="s_wine_banner" name="Home Banner">
		<section class="wine-home-banner">
			<div id="wine-carousel" class="carousel bs-slider slide  control-round indicators-line" data-ride="carousel" data-pause="hover" data-interval="7000">
	          	<div class="carousel-inner" role="listbox">
	            	<div class="carousel-item active" style="background-image: url('/theme_vouge/static/src/img/wine-banner.jpg');">
	            		<div class="container extended-container">
	            			<div class="row position-relative align-items-center justify-content-center">
	            				<div class="col-6 col-xl-5">
	            					<div class="image">
	            						<img src="/theme_vouge/static/src/img/wine-famous-2.png" class="img img-fluid"/>
	            					</div>
	            				</div>
	            				<div class="col-md-6 col-6">
	            					<div class="banner-content">
	            						<div class="subtitle">Refreshment Inside Bottle</div>
	            						<h1 class="title">Premium Wines<br></br>You Need To Try This<br></br>Holidays</h1>
	            						<div class="s_btn mt16" data-name="Button">
	            							<a href="#" class="btn btn-link text-white">Shop now</a>
	            						</div>
	            					</div>
	            				</div>
	            			</div>
	            		</div>
	            	</div>
	            	<div class="carousel-item" style="background-image: url('/theme_vouge/static/src/img/wine-banner2.jpg');">
	            		<div class="container extended-container">
	            			<div class="row position-relative justify-content-center align-items-center">
	            				<div class="col-6 col-xl-5">
	            					<div class="image">
	            						<img src="/theme_vouge/static/src/img/wine-famous-2.png" class="img img-fluid"/>
	            					</div>
	            				</div>
	            				<div class="col-md-6 col-6">
	            					<div class="banner-content">
	            						<div class="subtitle">Refreshment Inside Bottle</div>
	            						<h1 class="title">Premium Wines<br></br>You Need To Try This<br></br>Holidays</h1>
	            						<div class="s_btn mt16" data-name="Button">
	            							<a href="#" class="btn btn-link text-white">Shop now</a>
	            						</div>
	            					</div>
	            				</div>
	            			</div>
	            		</div>
	            	</div>
	          	</div>
	          	<ol class="carousel-indicators">
		            <li data-target="#wine-carousel" data-slide-to="0" class="active"/>
		            <li data-target="#wine-carousel" data-slide-to="1"/>
		        </ol>
		        <div class="slider-control">
              		<a class="left carousel-control-prev text-white font-14" data-target="#wine-carousel" role="button" data-slide="prev">
	                	<span class="lnr lnr-arrow-left"/>
	               	 	<b class="sr-only font-normal o_default_snippet_text">Previous</b>
	              	</a>
	              	<a class="right carousel-control-next text-white font-14" data-target="#wine-carousel" role="button" data-slide="next">
	                	<span class="lnr lnr-arrow-right"/>
	                	<b class="sr-only font-normal o_default_snippet_text">Next</b>
	              	</a>
	            </div>
        	</div>
		</section>
	</template>

</odoo>